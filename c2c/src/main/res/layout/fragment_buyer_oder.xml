<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="financialRechargeRecordModel"
            type="Object" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.black.lib.refresh.QRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/B1"
                android:fadingEdge="none"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/B1"
                        android:descendantFocusability="blocksDescendants">

                        <com.black.base.view.EmptyRecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fadingEdge="none"
                            android:overScrollMode="never"
                            android:scrollbars="none" />
                        <LinearLayout
                            android:id="@+id/id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/text_size_20"
                            android:layout_marginTop="@dimen/text_size_5"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/add"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="@dimen/text_size_10"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/btn_add_message"/>
                            <com.black.lib.view.InputLinearLayout
                                android:layout_width="250dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="@dimen/text_size_10"
                                android:background="@drawable/bg_edittext_default"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <com.black.base.widget.SpanMaterialEditText
                                    android:id="@+id/put_message"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/B1"
                                    android:hint="在此输入你的对话"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:padding="0dp" />

                            </com.black.lib.view.InputLinearLayout>
                            <com.black.base.widget.SpanTextView
                                android:id="@+id/send"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/text_size_10"
                                android:gravity="center"
                                android:layout_marginLeft="@dimen/text_size_10"
                                android:text="@string/send"
                                android:textColor="@color/C1" />
                            <ImageView
                                android:id="@+id/phone"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/text_size_20"
                                android:src="@drawable/btn_c2c_phone"/>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>
            </com.black.base.widget.ObserveScrollView>
        </com.black.lib.refresh.QRefreshLayout>
    </LinearLayout>
</layout>