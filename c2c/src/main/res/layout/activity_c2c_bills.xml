<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="viewC2CQuilkModel"
            type="Object" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">
                <FrameLayout
                    android:id="@id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_alignParentTop="true">

                        <ImageButton
                            android:id="@+id/action_bar_back"
                            android:layout_width="wrap_content"
                            android:layout_height="54dp"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:onClick="onBackClick"
                            android:contentDescription="@null"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/btn_back_faction" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:layout_marginBottom="@dimen/text_size_10"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_c2c_header"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanCheckedTextView
                                android:id="@+id/num_jin"
                                android:layout_width="115dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_c2c_tab_header"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="进行中"
                                android:textColor="@color/btn_buy_check"
                                android:textSize="@dimen/text_size_14"
                                android:textStyle="bold" />

                            <com.black.base.widget.SpanCheckedTextView
                                android:id="@+id/num_wan"
                                android:layout_width="115dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_c2c_tab_header"
                                android:gravity="center"
                                android:checked="true"
                                android:maxLines="1"
                                android:text="已完成"
                                android:textColor="@color/btn_buy_check"
                                android:textSize="@dimen/text_size_14"
                                android:textStyle="bold" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_gravity="right"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/settings"
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:layout_marginRight="@dimen/text_size_5"
                                android:layout_marginTop="@dimen/text_size_14"
                                android:background="@drawable/c2c">

                            </ImageView>

                        </LinearLayout>
                    </FrameLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:orientation="vertical">

                                <com.black.base.widget.SpanCheckedTextView
                                    android:id="@+id/num_one"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:gravity="center"
                                    android:text="@string/all"
                                    android:textColor="@color/c2c_tab_buy"
                                    android:textSize="@dimen/text_size_13"
                                    android:textStyle="bold" />

                                <View
                                    android:id="@+id/bar_a"
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/text_size_5"
                                    android:background="#E622C177" />
                            </LinearLayout>

                            <View
                                android:id="@+id/view1"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:orientation="vertical">

                                <com.black.base.widget.SpanCheckedTextView
                                    android:id="@+id/num_two"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="已完成"
                                    android:textColor="@color/c2c_tab_buy"
                                    android:textSize="@dimen/text_size_13"
                                    android:textStyle="bold" />

                                <View
                                    android:id="@+id/bar_b"
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/text_size_5"
                                    android:background="#E622C177"
                                    android:visibility="gone" />
                            </LinearLayout>
                            <View
                                android:id="@+id/view2"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:orientation="vertical">

                                <com.black.base.widget.SpanCheckedTextView
                                    android:id="@+id/num_three"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="已取消"
                                    android:textColor="@color/c2c_tab_buy"
                                    android:textSize="@dimen/text_size_13"
                                    android:textStyle="bold" />

                                <View
                                    android:id="@+id/bar_c"
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/text_size_5"
                                    android:background="#E622C177"
                                    android:visibility="gone" />
                            </LinearLayout>
                            <View
                                android:id="@+id/view3"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:orientation="vertical">

                                <com.black.base.widget.SpanCheckedTextView
                                    android:id="@+id/num_four"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="申述"
                                    android:textColor="@color/c2c_tab_buy"
                                    android:textSize="@dimen/text_size_13"
                                    android:textStyle="bold" />

                                <View
                                    android:id="@+id/bar_d"
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/text_size_5"
                                    android:background="#E622C177"
                                    android:visibility="gone"
                                     />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_padding"
                    android:background="@color/B1" />
            </com.google.android.material.appbar.AppBarLayout>

            <com.black.lib.refresh.QRefreshLayout
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.black.base.widget.ObserveScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/B2"
                    android:fadingEdge="none"
                    android:fillViewport="true"
                    android:overScrollMode="never"
                    android:scrollbars="none">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/B2"
                        android:descendantFocusability="blocksDescendants">

                        <com.black.base.view.EmptyRecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fadingEdge="none"
                            android:overScrollMode="never"
                            android:scrollbars="none" />

                        <include
                            android:id="@+id/empty_view"
                            layout="@layout/list_view_empty_long" />
                    </RelativeLayout>
                </com.black.base.widget.ObserveScrollView>
            </com.black.lib.refresh.QRefreshLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>