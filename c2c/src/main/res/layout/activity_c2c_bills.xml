<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="viewC2CQuilkModel"
            type="Object" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">
                <FrameLayout
                    android:id="@id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_alignParentTop="true">

                        <ImageButton
                            android:id="@+id/action_bar_back"
                            android:layout_width="wrap_content"
                            android:layout_height="54dp"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:onClick="onBackClick"
                            android:contentDescription="@null"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/btn_back_faction" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:layout_marginBottom="@dimen/text_size_10"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_c2c_header"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanCheckedTextView
                                android:id="@+id/num_jin"
                                android:layout_width="115dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_c2c_tab_header"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="进行中"
                                android:textColor="@color/btn_buy_check"
                                android:textSize="@dimen/text_size_14"
                                android:textStyle="bold" />

                            <com.black.base.widget.SpanCheckedTextView
                                android:id="@+id/num_wan"
                                android:layout_width="115dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/bg_c2c_tab_header"
                                android:gravity="center"
                                android:checked="true"
                                android:maxLines="1"
                                android:text="已完成"
                                android:textColor="@color/btn_buy_check"
                                android:textSize="@dimen/text_size_14"
                                android:textStyle="bold" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_gravity="right"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/settings"
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:layout_marginRight="@dimen/text_size_5"
                                android:layout_marginTop="@dimen/text_size_14"
                                android:background="@drawable/c2c">

                            </ImageView>

                        </LinearLayout>
                    </FrameLayout>
                    </LinearLayout>
                </FrameLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_padding"
                    android:background="@color/B1" />
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:flipInterval="30"
                android:persistentDrawingCache="animation"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>