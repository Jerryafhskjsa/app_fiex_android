<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewC2CBuyModel"
            type="Object" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">

                <include layout="@layout/tool_bar_left_back" />

            </com.google.android.material.appbar.AppBarLayout>


            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_20"
                        android:layout_marginTop="@dimen/text_size_10"
                        android:layout_marginRight="@dimen/text_size_20"
                        android:orientation="horizontal">

                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/unit_price" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/unit_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:drawableRight="@drawable/btn_c2c_right"
                            android:gravity="center_vertical"
                            android:text="￥6.68"
                            android:textColor="@color/C4" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_20"
                        android:layout_marginTop="@dimen/text_size_10"
                        android:layout_marginRight="@dimen/text_size_20"
                        android:orientation="horizontal">

                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/quota" />

                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:text="￥"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                        <com.black.base.widget.SpanTextView
                            android:id="@+id/xian_min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:text="1000"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:text="￥"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                        <com.black.base.widget.SpanTextView
                            android:id="@+id/xian_max"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:text="2000"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_10"
                        android:layout_marginTop="@dimen/text_size_10"
                        android:layout_marginRight="@dimen/text_size_10"
                        android:layout_marginBottom="@dimen/text_size_10"
                        android:background="@drawable/bg_edittext_default"
                        android:maxLines="1"
                        android:orientation="vertical"
                        android:padding="0dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:orientation="vertical">

                                <com.black.base.widget.SpanCheckedTextView
                                    android:id="@+id/amount"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:gravity="center"
                                    android:text="@string/purchase_by_amount"
                                    android:textColor="@color/c2c_tab_buy"
                                    android:textSize="@dimen/text_size_13"
                                    android:textStyle="bold" />

                                <View
                                    android:id="@+id/bar_a"
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/text_size_5"
                                    android:background="#E622C177" />
                            </LinearLayout>

                            <View
                                android:id="@+id/view1"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:orientation="vertical">

                                <com.black.base.widget.SpanCheckedTextView
                                    android:id="@+id/accont"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/purchase_by_account"
                                    android:textColor="@color/c2c_tab_buy"
                                    android:textSize="@dimen/text_size_13"
                                    android:textStyle="bold" />

                                <View
                                    android:id="@+id/bar_b"
                                    android:layout_width="40dp"
                                    android:layout_height="4dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/text_size_5"
                                    android:background="#E622C177"
                                    android:visibility="gone" />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:layout_marginRight="@dimen/text_size_10"
                            android:background="@color/C2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:layout_marginRight="@dimen/text_size_20"
                                android:orientation="horizontal">

                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/balance" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/text_size_5"
                                    android:textColor="@color/black"
                                    android:text="0.0" />
                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/coin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/text_size_5"
                                    android:text="USDT" />
                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="=" />
                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/cny"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="0.0" />
                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/text_size_5"
                                    android:layout_weight="1"
                                    android:text="CNY" />
                            </LinearLayout>
                        </LinearLayout>

                        <com.black.lib.view.InputLinearLayout
                            android:id="@+id/money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:layout_marginRight="@dimen/text_size_10"
                            android:layout_marginBottom="@dimen/text_size_10"
                            android:background="@drawable/bg_edittext_default"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanTextView
                                style="@style/EditTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="@color/T1"
                                android:textSize="@dimen/text_size_16"
                                android:textStyle="bold" />

                            <com.black.base.widget.SpanMaterialEditText
                                android:id="@+id/put_money"
                                style="@style/EditTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:hint="@string/please_put_money"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="0dp" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/all_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/text_size_10"
                                android:gravity="right"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="0dp"
                                android:text="@string/all"
                                android:textColor="@color/C1" />

                        </com.black.lib.view.InputLinearLayout>

                        <com.black.lib.view.InputLinearLayout
                            android:id="@+id/amount_all"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:layout_marginRight="@dimen/text_size_10"
                            android:layout_marginBottom="@dimen/text_size_10"
                            android:background="@drawable/bg_edittext_default"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.black.base.widget.SpanMaterialEditText
                                android:id="@+id/put_amount"
                                style="@style/EditTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:hint="@string/please_put_amount"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="0dp" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/coin_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/text_size_10"
                                android:gravity="right"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="0dp"
                                android:text="USDT" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/all_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/text_size_10"
                                android:gravity="right"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="0dp"
                                android:text="@string/all"
                                android:textColor="@color/C1" />

                        </com.black.lib.view.InputLinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:layout_marginRight="@dimen/text_size_20"
                            style="@style/ButtonGreenLight"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/cards_color"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/text_size_2"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/c2c_cards_color"/>
                            <ImageView
                                android:id="@+id/ali_color"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/ali_color"/>
                            <ImageView
                                android:id="@+id/wei_xin_color"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/wei_xin_color"/>
                            <com.black.base.widget.SpanTextView
                                android:id="@+id/methods_layout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/text_size_5"
                                android:layout_marginTop="6dp"
                                android:layout_weight="1"
                                android:hint="请选择付款方式"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                 />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/text_size_10"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/arrow_right"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/cards_layout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:layout_marginRight="@dimen/text_size_20"
                            style="@style/ButtonGreenLight"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/c2c_cards_color"
                                android:paddingBottom="@dimen/text_size_16"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/text_size_10"
                                />
                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/text_size_5"
                                android:layout_marginTop="6dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:text="@string/cards" />
                            <com.black.base.widget.SpanTextView
                                android:layout_width="220dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_marginTop="6dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:text="6222222222222" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/text_size_10"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/arrow_right"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/id_pay_layout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:layout_marginRight="@dimen/text_size_20"
                            style="@style/ButtonGreenLight"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ali_color"
                                android:layout_gravity="center_vertical"
                                android:paddingBottom="@dimen/text_size_16"
                                android:layout_marginLeft="@dimen/text_size_10"
                                />
                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/text_size_5"
                                android:layout_marginTop="6dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:text="@string/id_pay" />
                            <com.black.base.widget.SpanTextView
                                android:layout_width="220dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_marginTop="6dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:text="13778037105" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/text_size_10"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/arrow_right"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/wei_xin_layout"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:layout_marginRight="@dimen/text_size_20"
                            style="@style/ButtonGreenLight"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/wei_xin_color"
                                android:paddingBottom="@dimen/text_size_16"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/text_size_10"
                                />
                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/text_size_5"
                                android:layout_marginTop="6dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:text="@string/wei_xin" />
                            <com.black.base.widget.SpanTextView
                                android:id="@+id/wei_xin_id"
                                android:layout_width="220dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_marginTop="6dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:text="13778037105" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_10"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/arrow_right"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/advice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:layout_marginRight="@dimen/text_size_20"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/amount" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="-USDT" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/pay_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:layout_marginRight="@dimen/text_size_20"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/total_money" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="-CNY" />
                        </LinearLayout>


                        <com.black.base.widget.SpanTextView
                            android:id="@+id/btn_confirm"
                            style="@style/ButtonRed"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/text_size_20"
                            android:layout_marginBottom="@dimen/text_size_20"
                            android:padding="@dimen/middle_padding"
                            android:text="@string/sell" />

                    </LinearLayout>



                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_20"
                        android:layout_marginTop="@dimen/text_size_20"
                        android:text="@string/transaction_message"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_20"
                        android:layout_marginTop="@dimen/text_size_20"
                        android:layout_marginRight="@dimen/text_size_20"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/pay_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/pay_time" />
                            <View
                                android:layout_width="60dp"
                                android:layout_height="1dp"
                                android:background="@color/black"/>
                        </LinearLayout>

                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="15min"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_20"
                        android:layout_marginTop="@dimen/text_size_10"
                        android:layout_marginRight="@dimen/text_size_20"
                        android:orientation="horizontal">

                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/buyer_name" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/arrow_right"
