<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_size_20"
        android:layout_marginRight="@dimen/text_size_20"
        style="@style/ButtonWhiteGray"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonWhiteGray"
            android:background="@color/B2"
            android:gravity="center"
            android:orientation="vertical">
            <com.black.base.widget.SpanTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/middle_padding"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="转账确认" />
            <com.black.base.widget.SpanTextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/middle_padding"
                android:text="请确认己向卖家转账，恶意点击将直接冻结账户" />

            <com.black.base.widget.SpanTextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginLeft="60dp"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:drawableLeft="@drawable/btn_cards_c2c"
                android:textStyle="bold"
                android:text="银行卡" />
            <com.black.base.widget.SpanTextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/middle_padding"
                android:layout_marginLeft="90dp"
                android:layout_gravity="left"
                android:textColor="@color/black_real"
                android:textStyle="bold"
                android:text="繁华似锦   9000000000" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_size_2"
                android:background="@color/C2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">


                <com.black.base.widget.SpanTextView
                    android:id="@+id/btn_cancel"
                    style="@style/ButtonWhiteGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/partTranslucent"
                    android:text="暂未付款" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/C2"/>

                <com.black.base.widget.SpanTextView
                    android:id="@+id/btn_confirm"
                    style="@style/ButtonWhiteGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#03CA89"
                    android:layout_weight="1"
                    android:text="我已完成转账" />

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</layout>