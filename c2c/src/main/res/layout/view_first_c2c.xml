<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">

                <include layout="@layout/tool_bar_left_back" />

            </com.google.android.material.appbar.AppBarLayout>

            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="50dp"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/c2c_png1"/>
                    <com.black.base.widget.SpanTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/text_size_20"
                        android:text="广告发布"
                        android:textSize="@dimen/text_size_20"
                        android:textColor="@color/black_real"
                        android:textStyle="bold"/>
                    <com.black.base.widget.SpanTextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/text_size_20"
                        android:text="加V用户自由发布广告，买卖更灵活、更便捷"
                        android:textSize="@dimen/text_size_20"
                        />
                    <ImageView
                        android:layout_marginTop="150dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_bar_1"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_size_10"
                        android:orientation="horizontal">
                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/c2c_range"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:text="我已阅读并同意" />
                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/bar_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#03CA89"
                            android:text="《广告发布方协议》" />
                    </LinearLayout>
                    <com.black.base.widget.SpanTextView
                        android:id="@+id/btn_submit"
                        style="@style/ButtonBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_20"
                        android:layout_marginRight="@dimen/text_size_20"
                        android:layout_marginTop="@dimen/text_size_20"
                        android:padding="@dimen/middle_padding"
                        android:text="立即申请" />
                </LinearLayout>
            </com.black.base.widget.ObserveScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>