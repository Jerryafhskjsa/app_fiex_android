<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="c2cCustomerSaleModel"
            type="Object" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/coin_tab"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:tabBackground="@color/transparent"
                app:tabMaxWidth="200dp"
                app:tabMinWidth="20dp"
                app:tabPaddingBottom="0dp"
                app:tabPaddingEnd="20dp"
                app:tabPaddingStart="0dp"
                app:tabPaddingTop="0dp"
                app:tabRippleColor="@color/transparent"
                app:tabTextAppearance="@style/DefaultTabStyle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:layout_gravity="bottom"
                android:background="@color/L1_ALPHA60" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/C1_ALPHA10"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="6dp"
            android:paddingRight="15dp"
            android:paddingBottom="6dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_c2c_warning" />

            <com.black.base.widget.SpanTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:drawablePadding="4dp"
                android:gravity="top"
                android:text="@string/c2c_warning"
                android:textColor="@color/C1"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" />
    </LinearLayout>
</layout>