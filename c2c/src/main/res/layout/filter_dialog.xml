<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="walletNormalModel"
            type="Object" />
    </data>
    <LinearLayout
        style="@style/ButtonWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.black.base.widget.ObserveScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/B1"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/B2"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_20"
                android:orientation="horizontal">

                <com.black.base.widget.SpanTextView
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/middle_padding"
                    android:text="@string/message_filter"
                    android:textColor="@color/T1"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/btn_cancel"
                    android:layout_width="20dp"
                    android:layout_height="@dimen/text_size_20"
                    android:layout_marginTop="@dimen/text_size_15"
                    android:background="@drawable/fiex_icon_main_pop_close"
                    android:gravity="right">

                </ImageView>
            </LinearLayout>
                <RelativeLayout
                    style="@style/MenuListItem"
                    android:layout_width="match_parent">

                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/use_last"
                        android:textColor="@color/T1"
                        android:textSize="@dimen/text_size_16" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/finger_print_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:thumb="@drawable/icon_switch_thumb"
                        android:track="@drawable/bg_switch_track"
                        app:track="@drawable/bg_switch_track" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/text_size_10"
                    android:layout_marginLeft="@dimen/text_size_10"
                    android:background="@color/C2"/>
                <com.black.lib.view.InputLinearLayout
                    android:id="@+id/money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_size_10"
                    android:layout_marginLeft="@dimen/text_size_10"
                    android:layout_marginTop="@dimen/text_size_10"
                    android:layout_marginBottom="@dimen/text_size_10"
                    android:background="@drawable/bg_edittext_default"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.black.base.widget.SpanMaterialEditText
                        android:id="@+id/put_money"
                        style="@style/EditTextStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                         android:background="@null"
                        android:hint="@string/please_put_money"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="0dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="21dp"
                        android:background="@color/T11_ALPHA5">

                    </View>


                    <com.black.base.widget.SpanTextView
                        android:id="@+id/get_mail_code"
                        style="@style/EditTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="CNY"
                        android:textColor="@color/T1"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_16" />
                </com.black.lib.view.InputLinearLayout>
                <com.black.base.widget.SpanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_20"
                    android:text="@string/exchange_method"
                    android:textColor="@color/T1"
                    android:textSize="@dimen/text_size_16" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_size_10"
                    android:layout_marginLeft="@dimen/text_size_10"
                    android:layout_marginTop="@dimen/text_size_10"
                    android:orientation="horizontal">

                    <com.black.base.widget.SpanCheckedTextView
                        android:id="@+id/one"
                        style="@style/ButtonGrayLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/middle_padding"
                        android:text="@string/all" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="@dimen/line" />

                    <com.black.base.widget.SpanCheckedTextView
                        android:id="@+id/two"
                        style="@style/ButtonGrayLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/middle_padding"
                        android:text="@string/cards" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="@dimen/line" />

                    <com.black.base.widget.SpanCheckedTextView
                        android:id="@+id/three"
                        style="@style/ButtonGrayLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/middle_padding"
                        android:text="@string/id_pay" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_10"
                    android:layout_marginRight="@dimen/text_size_10"
                    android:layout_marginTop="@dimen/text_size_5"
                    android:orientation="horizontal">

                    <com.black.base.widget.SpanCheckedTextView
                        android:id="@+id/four"
                        style="@style/ButtonGrayLight"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/middle_padding"
                        android:text="@string/wei_xin" />


                </LinearLayout>
                <com.black.base.widget.SpanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_20"
                    android:layout_marginTop="@dimen/text_size_10"
                    android:text="@string/country_area"
                    android:textColor="@color/T1"
                    android:textSize="@dimen/text_size_16" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_size_10"
                    android:layout_marginLeft="@dimen/text_size_10"
                    android:layout_marginTop="@dimen/text_size_10"
                    android:orientation="horizontal">

                    <com.black.base.widget.SpanCheckedTextView
                        android:id="@+id/first"
                        style="@style/ButtonGrayLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/middle_padding"
                        android:text="@string/all" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="@dimen/line" />

                    <com.black.base.widget.SpanCheckedTextView
                        android:id="@+id/second"
                        style="@style/ButtonGrayLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/middle_padding"
                        android:text="@string/china" />
                    <View
                        android:layout_width="5dp"
                        android:layout_height="@dimen/line" />

                    <com.black.base.widget.SpanCheckedTextView
                        android:id="@+id/third"
                        style="@style/ButtonGrayLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/middle_padding"
                        android:text="@string/america" />

                </LinearLayout>

                <RelativeLayout
                    style="@style/MenuListItem"
                    android:layout_width="match_parent">

                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/put_message"
                        android:textColor="@color/T1"
                        android:textSize="@dimen/text_size_16" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:thumb="@drawable/icon_switch_thumb"
                        android:track="@drawable/bg_switch_track"
                        app:track="@drawable/bg_switch_track" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_10"
                    android:layout_marginRight="@dimen/text_size_10"
                    android:layout_marginTop="@dimen/text_size_20"
                    android:orientation="horizontal">



                    <com.black.base.widget.SpanTextView
                        android:id="@+id/reset"
                        style="@style/ButtonGray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/text_size_10"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/middle_padding"
                        android:text="@string/reset" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/line" />

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/btn_confirm"
                        style="@style/ButtonBlue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/middle_padding"
                        android:text="@string/confirm" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />


            </LinearLayout>
        </com.black.base.widget.ObserveScrollView>
    </LinearLayout>
</layout>