<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="assetsModel"
            type="java.util.ArrayList" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_assets_header">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    style="@style/CollapsingToolbarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_assets_header"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed"
                    app:titleEnabled="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_collapseMode="pin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"

                            android:paddingRight="15dp"
                            android:paddingBottom="40dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:baselineAligned="true"
                                android:gravity="center_vertical"
                                android:minHeight="40dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:baselineAligned="true"
                                    android:orientation="vertical">


                                    <ImageButton
                                        android:id="@+id/action_bar_back"
                                        android:layout_width="wrap_content"
                                        android:layout_height="54dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@null"
                                        android:contentDescription="@null"
                                        android:onClick="onBackClick"
                                        android:paddingLeft="15dp"
                                        android:paddingRight="15dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/btn_back_buy_detail" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/lin_exchange"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="20dp">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:src="@drawable/action_face_selector" />

                                        <com.black.base.widget.SpanTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/text_size_5"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="40dp"
                                            android:text="张不凡"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/text_size_18"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="12dp"
                                            android:paddingLeft="60dp"
                                            android:src="@drawable/c2c_star" />

                                        <com.black.base.widget.SpanTextView
                                            android:id="@+id/btn_exchange"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="none"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="@dimen/text_size_10"
                                            android:singleLine="true"
                                            android:text="ID:"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/text_size_14"
                                            android:textStyle="bold" />

                                        <com.black.base.widget.SpanTextView
                                            android:id="@+id/id"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="none"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="@dimen/text_size_10"
                                            android:singleLine="true"
                                            android:text="754321"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/text_size_14"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </RelativeLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="700dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/text_size_10"
                        android:layout_marginTop="@dimen/text_size_5"
                        android:layout_height="30dp"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@drawable/bg_login_devide_bar"
                            android:layout_gravity="bottom"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/msg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#E622C177"
                                    android:textSize="@dimen/text_size_14"
                                    android:textStyle="bold"
                                    android:text="@string/message">
                                </com.black.base.widget.SpanTextView>
                                <View
                                    android:id="@+id/msg_bar"
                                    android:layout_marginTop="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="4dp"
                                    android:background="@drawable/bg_login_devide_bar_title"
                                    />
                            </LinearLayout>
                            <View
                                android:id="@+id/view1"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                />
                            <LinearLayout
                                android:id="@+id/ad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_13"
                                    android:textColor="@color/T14"
                                    android:text="@string/advertisement">
                                </com.black.base.widget.SpanTextView>
                                <View
                                    android:id="@+id/phone_bar_b"
                                    android:layout_marginTop="8dp"
                                    android:layout_width="match_parent"
                                    android:visibility="gone"
                                    android:layout_height="4dp"
                                    android:background="@drawable/bg_login_devide_bar_title"
                                    />
                            </LinearLayout>
                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_5"
                                android:textSize="@dimen/text_size_14"
                                android:textColor="@color/T14"
                                android:text="(0)"/>
                        </LinearLayout>
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_marginTop="50dp"
                                android:background="@color/B1"
                                android:orientation="horizontal">


                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/coin"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="USDT"
                                    android:textColor="@color/black_real"
                                    android:textSize="@dimen/text_size_16" />

                                <com.black.base.widget.SpanTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/text_size_10"
                                    android:gravity="right"
                                    android:text="@string/available"
                                    android:textColor="@color/black_real"
                                    android:textSize="@dimen/text_size_16" />

                                <com.black.base.widget.SpanTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/freez"
                                    android:textColor="@color/list_bottom_text_bg"
                                    android:textSize="@dimen/text_size_16"
                                    android:textStyle="bold" />

                                <com.black.base.widget.SpanTextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:gravity="right"
                                    android:text=")"
                                    android:textColor="@color/black_real"
                                    android:textSize="@dimen/text_size_16" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/total_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_marginTop="20dp"
                                android:background="@color/B1"
                                android:orientation="horizontal">


                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/c2c_available"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0.0/"
                                    android:textColor="@color/black_real"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <com.black.base.widget.SpanTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="0.0"
                                    android:textColor="@color/list_bottom_text_bg"
                                    android:textSize="@dimen/text_size_20" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_transfer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right"
                                android:layout_marginRight="@dimen/text_size_20"
                                android:src="@drawable/btn_tranfer_c2c"></ImageView>

                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="25dp"
                                android:ellipsize="none"
                                android:paddingTop="8dp"
                                android:singleLine="true"
                                android:text="@string/transfer"
                                android:textColor="#E622C177"
                                android:textSize="@dimen/text_size_16"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_size_2"
                        android:layout_marginTop="@dimen/text_size_20"
                        android:background="@color/C2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:orientation="vertical">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/order"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black_real"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <com.black.base.widget.SpanTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_size_5"
                                android:text="@string/my_order"
                                android:textColor="@color/list_bottom_text_bg"
                                android:textSize="@dimen/text_size_20" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:orientation="vertical">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/order_confirm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0 %"
                                android:textColor="@color/black_real"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <com.black.base.widget.SpanTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_size_5"
                                android:gravity="center"
                                android:text="@string/my_confirm"
                                android:textColor="@color/list_bottom_text_bg"
                                android:textSize="@dimen/text_size_20" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </RelativeLayout>
</layout>