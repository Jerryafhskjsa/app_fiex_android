<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="viewC2CBuyModel"
            type="Object" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">

                <FrameLayout
                    android:id="@id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_alignParentTop="true">

                        <ImageButton
                            android:id="@+id/action_bar_back"
                            android:layout_width="wrap_content"
                            android:layout_height="54dp"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:contentDescription="@null"
                            android:onClick="onBackClick"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/btn_back_faction" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/area_choose"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:drawableRight="@drawable/icon_deep"
                                android:text="@string/shortcut_area"
                                android:textColor="@color/T1"
                                android:textSize="@dimen/text_size_16"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_gravity="right"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/rate"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="22dp"
                                android:layout_marginRight="@dimen/text_size_5"
                                android:layout_marginBottom="15dp"
                                android:text="CNY"
                                android:textColor="@color/T1"
                                android:textSize="@dimen/text_size_16"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:background="@drawable/btn_exchange" />

                            <ImageView
                                android:id="@+id/settings"
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:layout_marginTop="@dimen/text_size_14"
                                android:layout_marginRight="@dimen/text_size_5"
                                android:background="@drawable/c2c">

                            </ImageView>

                        </LinearLayout>
                    </FrameLayout>

                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_padding"
                    android:background="@color/B1" />
            </com.google.android.material.appbar.AppBarLayout>

            <com.black.lib.refresh.QRefreshLayout
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.black.base.widget.ObserveScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/B2"
                    android:fadingEdge="none"
                    android:fillViewport="true"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/B2"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:layout_marginBottom="@dimen/text_size_10"
                                android:background="@drawable/bg_c2c_header"
                                android:orientation="horizontal">

                                <com.black.base.widget.SpanCheckedTextView
                                    android:id="@+id/c2c_one_key"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_c2c_tab_header"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/my_buy"
                                    android:textColor="@color/btn_buy_check"
                                    android:textSize="@dimen/text_size_14"
                                    android:textStyle="bold" />

                                <com.black.base.widget.SpanCheckedTextView
                                    android:id="@+id/c2c_customer"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_c2c_red"
                                    android:checked="true"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="@string/my_sale"
                                    android:textColor="@color/btn_buy_check"
                                    android:textSize="@dimen/text_size_14"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/person"
                                android:layout_width="30dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="130dp"
                                android:layout_marginTop="7dp"
                                android:background="@drawable/btn_person">

                            </ImageView>

                            <ImageView
                                android:id="@+id/bills"
                                android:layout_width="30dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:background="@drawable/btn_c2c_bills">

                            </ImageView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:layout_marginRight="@dimen/text_size_20"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanCheckedTextView
                                android:id="@+id/one"
                                style="@style/ButtonGray"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:gravity="center"
                                android:text="USDT"
                                android:textColor="@color/btn_sale_check" />

                            <View
                                android:layout_width="5dp"
                                android:layout_height="@dimen/line" />

                            <com.black.base.widget.SpanCheckedTextView
                                android:id="@+id/two"
                                style="@style/ButtonGray"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="BTC"
                                android:textColor="@color/btn_sale_check" />

                            <View
                                android:layout_width="5dp"
                                android:layout_height="@dimen/line" />

                            <com.black.base.widget.SpanCheckedTextView
                                android:id="@+id/three"
                                style="@style/ButtonGray"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="BUSD"
                                android:textColor="@color/btn_sale_check" />

                            <View
                                android:layout_width="5dp"
                                android:layout_height="@dimen/line" />

                            <com.black.base.widget.SpanCheckedTextView
                                android:id="@+id/four"
                                style="@style/ButtonGray"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="BNB"
                                android:textColor="@color/btn_sale_check" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:layout_marginRight="@dimen/text_size_10"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanCheckedTextView
                                android:id="@+id/five"
                                style="@style/ButtonGray"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="DOGE"
                                android:textColor="@color/btn_sale_check" />

                            <View
                                android:layout_width="5dp"
                                android:layout_height="@dimen/line" />

                            <com.black.base.widget.SpanCheckedTextView
                                android:id="@+id/six"
                                style="@style/ButtonGray"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="ETH"
                                android:textColor="@color/btn_sale_check" />

                            <View
                                android:layout_width="5dp"
                                android:layout_height="@dimen/line" />

                            <com.black.base.widget.SpanCheckedTextView
                                android:id="@+id/sven"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/middle_padding"
                                android:text="@string/more"
                                android:textColor="@color/T13" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:layout_marginRight="@dimen/text_size_10"
                            android:layout_marginBottom="@dimen/text_size_10"
                            android:background="@drawable/bg_edittext_default"
                            android:maxLines="1"
                            android:orientation="vertical"
                            android:padding="0dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/text_size_10"
                                    android:orientation="vertical">

                                    <com.black.base.widget.SpanCheckedTextView
                                        android:id="@+id/amount"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:checked="true"
                                        android:gravity="center"
                                        android:text="@string/purchase_by_amount"
                                        android:textColor="@color/c2c_tab_buy"
                                        android:textSize="@dimen/text_size_13"
                                        android:textStyle="bold" />

                                    <View
                                        android:id="@+id/bar_a"
                                        android:layout_width="40dp"
                                        android:layout_height="4dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/text_size_5"
                                        android:background="@color/T13" />
                                </LinearLayout>

                                <View
                                    android:id="@+id/view1"
                                    android:layout_width="20dp"
                                    android:layout_height="wrap_content" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/text_size_10"
                                    android:orientation="vertical">

                                    <com.black.base.widget.SpanCheckedTextView
                                        android:id="@+id/accont"
                                        android:layout_width="150dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="@string/purchase_by_account"
                                        android:textColor="@color/c2c_tab_buy"
                                        android:textSize="@dimen/text_size_13"
                                        android:textStyle="bold" />

                                    <View
                                        android:id="@+id/bar_b"
                                        android:layout_width="40dp"
                                        android:layout_height="4dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/text_size_5"
                                        android:background="@color/T13"
                                        android:visibility="gone" />
                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="@dimen/text_size_10"
                                android:layout_marginRight="@dimen/text_size_10"
                                android:background="@color/C2" />

                            <com.black.lib.view.InputLinearLayout
                                android:id="@+id/money"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_10"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:layout_marginRight="@dimen/text_size_10"
                                android:layout_marginBottom="@dimen/text_size_10"
                                android:background="@drawable/bg_edittext_default"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/get_mail_code"
                                    style="@style/EditTextStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="￥"
                                    android:textColor="@color/T1"
                                    android:textSize="@dimen/text_size_16"
                                    android:textStyle="bold" />

                                <com.black.base.widget.SpanMaterialEditText
                                    android:id="@+id/put_money"
                                    style="@style/EditTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:hint="@string/example"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1"
                                    android:padding="0dp" />

                            </com.black.lib.view.InputLinearLayout>

                            <com.black.lib.view.InputLinearLayout
                                android:id="@+id/money_account1"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="@dimen/text_size_10"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:layout_marginRight="@dimen/text_size_10"
                                android:layout_marginBottom="@dimen/text_size_10"
                                android:background="@drawable/bg_edittext_default"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <com.black.base.widget.SpanMaterialEditText
                                    android:id="@+id/money_account"
                                    style="@style/EditTextStyle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:hint="@string/example_most"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1"
                                    android:padding="0dp" />
                            </com.black.lib.view.InputLinearLayout>

                            <LinearLayout
                                android:id="@+id/money_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:layout_marginRight="@dimen/text_size_20"
                                android:layout_marginBottom="@dimen/text_size_10"
                                android:orientation="horizontal">

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/first"
                                    style="@style/ButtonGray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="1x" />

                                <View
                                    android:layout_width="5dp"
                                    android:layout_height="@dimen/line" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/second"
                                    style="@style/ButtonGray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="5x" />

                                <View
                                    android:layout_width="5dp"
                                    android:layout_height="@dimen/line" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/third"
                                    style="@style/ButtonGray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="10x" />

                                <View
                                    android:layout_width="5dp"
                                    android:layout_height="@dimen/line" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/fourth"
                                    style="@style/ButtonGray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="20x" />

                                <View
                                    android:layout_width="5dp"
                                    android:layout_height="@dimen/line" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/fifth"
                                    style="@style/ButtonGray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="50x" />

                                <View
                                    android:layout_width="5dp"
                                    android:layout_height="@dimen/line" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/sixth"
                                    style="@style/ButtonGray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="100x" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/advice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:layout_marginRight="@dimen/text_size_20"
                                android:orientation="horizontal">

                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/reference_quotation"
                                    android:textSize="@dimen/text_size_12" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/rate_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/text_size_10"
                                    android:gravity="center"
                                    android:text="6.78 CNY/USDT"
                                    android:textColor="@color/black_real"
                                    android:textSize="@dimen/text_size_12" />

                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="@string/advice"
                                    android:textColor="@color/C5"
                                    android:textSize="@dimen/text_size_12" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/advice_null"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:layout_marginRight="@dimen/text_size_20"
                                android:background="#FAF3DD"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/text_size_10"
                                    android:layout_marginTop="@dimen/text_size_5"
                                    android:layout_marginRight="@dimen/text_size_10"
                                    android:background="@drawable/icon_secure_tip" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/advice_all"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/text_size_5"
                                    android:layout_marginBottom="@dimen/text_size_5"
                                    android:layout_weight="1"
                                    android:text="@string/advice_null"
                                    android:textColor="@color/C5"
                                    android:textSize="@dimen/text_size_12" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/pay_account"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:layout_marginRight="@dimen/text_size_20"
                                android:orientation="horizontal">

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/change"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/number_of_transactions"
                                    android:textSize="@dimen/text_size_12" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/change_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="11"
                                    android:textColor="@color/black_real"
                                    android:textSize="@dimen/text_size_12" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/coin_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="USDT"
                                    android:textColor="@color/black_real"
                                    android:textSize="@dimen/text_size_12" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/payment_method"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:layout_marginRight="@dimen/text_size_20"
                                android:orientation="horizontal">

                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="@string/payment_method"
                                    android:textSize="@dimen/text_size_12" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cards_layout"
                                style="@style/ButtonGray"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:layout_marginRight="@dimen/text_size_20"
                                android:orientation="horizontal">

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/cards"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:layout_marginLeft="@dimen/text_size_5"
                                    android:text="@string/cards"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="right">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="@dimen/text_size_10"
                                        android:background="@drawable/arrow_right" />
                                </LinearLayout>
                            </LinearLayout>




                            <com.black.base.widget.SpanTextView
                                android:id="@+id/btn_confirm"
                                style="@style/ButtonBlue"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/text_size_20"
                                android:layout_marginBottom="@dimen/text_size_20"
                                android:checked="true"
                                android:padding="@dimen/middle_padding"
                                android:text="@string/by_0_fee" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/btn_confirm_sale"
                                style="@style/ButtonBlue"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/text_size_20"
                                android:layout_marginBottom="@dimen/text_size_20"
                                android:padding="@dimen/middle_padding"
                                android:text="@string/sale_0_fee"
