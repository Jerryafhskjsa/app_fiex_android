<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">

                <include layout="@layout/tool_bar_left_back" />

            </com.google.android.material.appbar.AppBarLayout>

            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:id="@+id/bar_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <com.black.base.widget.SpanTextView
                            android:layout_width="18dp"
                            android:layout_height="@dimen/text_size_18"
                            android:layout_marginLeft="@dimen/text_size_15"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="1"
                            android:background="@drawable/gray_c2c"
                            />
                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_5"
                            android:layout_marginRight="@dimen/text_size_15"
                            android:text="提交申请"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/btn_vector"

                            />
                        <com.black.base.widget.SpanTextView
                            android:layout_width="18dp"
                            android:layout_height="@dimen/text_size_18"
                            android:layout_marginLeft="@dimen/text_size_15"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="2"
                            android:background="@drawable/gray_c2c"
                            />

                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="等待审核"
                            android:layout_marginLeft="@dimen/text_size_5"
                            android:layout_marginRight="@dimen/text_size_15"
                            android:textSize="@dimen/text_size_14"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/btn_vector"

                            />

                        <com.black.base.widget.SpanTextView
                            android:layout_width="18dp"
                            android:layout_height="@dimen/text_size_18"
                            android:layout_marginLeft="@dimen/text_size_15"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="3"
                            android:background="@drawable/green_c2c"
                            />
                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14"
                            android:layout_marginLeft="@dimen/text_size_5"
                            android:layout_marginRight="@dimen/text_size_5"
                            android:textColor="#03CA89"
                            android:text="审核通过"
                            />

                    </LinearLayout>
                    <ImageView
                        android:layout_marginTop="50dp"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/btn_frame_one"/>

                    <com.black.base.widget.SpanTextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/text_size_20"
                        android:textColor="@color/black"
                        android:text="审核通过"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_16"
                        />
                    <com.black.base.widget.SpanTextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/text_size_10"
                        android:text="成为加V用户，可以发布广告"
                        android:textSize="@dimen/text_size_14"
                        />
                </LinearLayout>
            </com.black.base.widget.ObserveScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>