<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="assetsModel"
            type="java.util.ArrayList" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_assets_header">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    style="@style/CollapsingToolbarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_assets_header"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed"
                    app:titleEnabled="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_collapseMode="pin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"

                            android:paddingRight="15dp"
                            android:paddingBottom="40dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:baselineAligned="true"
                                android:gravity="center_vertical"
                                android:minHeight="40dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:baselineAligned="true"
                                    android:orientation="vertical">


                                    <ImageButton
                                        android:id="@+id/action_bar_back"
                                        android:layout_width="wrap_content"
                                        android:layout_height="54dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@null"
                                        android:contentDescription="@null"
                                        android:onClick="onBackClick"
                                        android:paddingLeft="15dp"
                                        android:paddingRight="15dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/btn_back_buy_detail" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/lin_exchange"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="20dp">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:src="@drawable/action_face_selector" />

                                        <com.black.base.widget.SpanTextView
                                            android:id="@+id/name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/text_size_5"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="40dp"
                                            android:text="kinki"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/text_size_18"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/text_size_10"
                                            android:paddingLeft="60dp"
                                            android:src="@drawable/icon_red_packet_got_best" />

                                        <com.black.base.widget.SpanTextView
                                            android:id="@+id/btn_exchange"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="none"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="@dimen/text_size_10"
                                            android:singleLine="true"
                                            android:text="认证广告方  |"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/text_size_14"
                                            android:textStyle="bold" />

                                        <com.black.base.widget.SpanTextView
                                            android:id="@+id/id"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="none"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="@dimen/text_size_10"
                                            android:singleLine="true"
                                            android:text="保证金15,000 BUSD"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/text_size_14"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <com.black.base.widget.SpanTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="none"
                                            android:paddingLeft="60dp"
                                            android:paddingTop="@dimen/text_size_10"
                                            android:singleLine="true"
                                            android:text="邮箱"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/text_size_14"
                                            android:textStyle="bold" />
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/text_size_15"
                                            android:paddingLeft="10dp"
                                            android:paddingRight="@dimen/text_size_20"
                                            android:src="@drawable/white_gou" />

                                        <com.black.base.widget.SpanTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="none"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="@dimen/text_size_10"
                                            android:singleLine="true"
                                            android:text="手机"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/text_size_14"
                                            android:textStyle="bold" />
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/text_size_15"
                                            android:paddingLeft="10dp"
                                            android:paddingRight="@dimen/text_size_20"
                                            android:src="@drawable/white_gou" />
                                        <com.black.base.widget.SpanTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="none"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="@dimen/text_size_10"
                                            android:singleLine="true"
                                            android:text="身份"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/text_size_14"
                                            android:textStyle="bold" />
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/text_size_15"
                                            android:paddingLeft="10dp"
                                            android:paddingRight="@dimen/text_size_20"
                                            android:src="@drawable/white_gou" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </RelativeLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="700dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="none"
                            android:paddingLeft="30dp"
                            android:paddingTop="@dimen/text_size_10"
                            android:singleLine="true"
                            android:checked="true"
                            android:text="@string/message"
                            android:textColor="@color/tab_contranct_text"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="bold" />
                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/ad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="none"
                            android:paddingLeft="30dp"
                            android:paddingTop="@dimen/text_size_10"
                            android:singleLine="true"
                            android:text="广告(0)"
                            android:textColor="@color/tab_contranct_text"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_size_2"
                        android:layout_marginTop="@dimen/text_size_5"
                        android:background="@color/C2">

                        <View
                            android:id="@+id/bar_b"
                            style="@style/ButtonGreen"
                            android:layout_width="30dp"
                            android:layout_height="5dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="10dp"
                            android:background="#E622C177" />
                        <View
                            android:id="@+id/bar_a"
                            style="@style/ButtonGreen"
                            android:layout_width="30dp"
                            android:layout_height="5dp"
                            android:visibility="gone"
                            android:layout_marginLeft="90dp"
                            android:layout_marginRight="10dp"
                            android:background="#E622C177" />
                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/msg_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:orientation="vertical">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/order"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black_real"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <com.black.base.widget.SpanTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_size_5"
                                android:text="@string/my_order"
                                android:textColor="@color/list_bottom_text_bg"
                                android:textSize="@dimen/text_size_20" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:orientation="vertical">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/order_confirm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0 %"
                                android:textColor="@color/black_real"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <com.black.base.widget.SpanTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_size_5"
                                android:gravity="center"
                                android:text="@string/my_confirm"
                                android:textColor="@color/list_bottom_text_bg"
                                android:textSize="@dimen/text_size_20" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_marginTop="50dp"
                                android:background="@color/B1"
                                android:orientation="horizontal">


                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="30日平均放行时间"
                                    android:textColor="@color/black_real"
                                    android:textSize="@dimen/text_size_16" />

                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/text_size_10"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="0 分钟"
                                    android:textColor="@color/black_real"
                                    android:textSize="@dimen/text_size_16" />


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_20"
                                android:layout_marginTop="10dp"
                                android:background="@color/B1"
                                android:orientation="horizontal">


                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="30日平均付款"
                                    android:textColor="@color/black_real"
                                    android:textSize="@dimen/text_size_16" />

                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/text_size_10"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="0 分钟"
                                    android:textColor="@color/black_real"
                                    android:textSize="@dimen/text_size_16" />


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_size_2"
                        android:layout_marginTop="@dimen/text_size_20"
                        android:background="@color/C2" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_20"
                        android:layout_marginTop="10dp"
                        android:background="@color/B1"
                        android:orientation="horizontal">


                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="首次交易至今"
                            android:textSize="@dimen/text_size_16" />

                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/text_size_10"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="0 次"
                            android:textColor="@color/black_real"
                            android:textSize="@dimen/text_size_16" />


                    </LinearLayout>
                    <com.black.base.widget.SpanTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/text_size_10"
                        android:layout_marginTop="@dimen/text_size_5"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="买 0 | 卖 0"
                        android:textColor="@color/black_real"
                        android:textSize="@dimen/text_size_16" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="180dp"
                        android:gravity="center"
                        android:background="@color/B1"
                        android:orientation="vertical">


                        <com.black.base.widget.SpanTextView
                            android:id="@+id/black"
                            style="@style/ButtonReturnGreen"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:text="拉黑"
                            android:textSize="@dimen/text_size_16" />

                        <com.black.base.widget.SpanTextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/text_size_20"
                            android:layout_marginBottom="@dimen/text_size_10"
                            android:gravity="center"
                            android:text="为了降低您的交易风险，认证广告方已向平台缴纳保证金，请放心交易。"
                            android:textSize="@dimen/text_size_12" />


                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/B2"
                        android:descendantFocusability="blocksDescendants">

                        <com.black.base.view.EmptyRecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fadingEdge="none"
                            android:overScrollMode="never"
                            android:scrollbars="none" />

                        <include
                            android:id="@+id/empty_view"
                            layout="@layout/list_view_empty_long" />
                    </RelativeLayout>
                </LinearLayout>
                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </RelativeLayout>
</layout>