<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="assetsModel"
            type="java.util.ArrayList" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_assets_header">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    style="@style/CollapsingToolbarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_assets_header"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed"
                    app:titleEnabled="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_collapseMode="pin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"

                            android:paddingRight="15dp"
                            android:paddingBottom="40dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:baselineAligned="true"
                                android:gravity="center_vertical"
                                android:minHeight="40dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:baselineAligned="true"
                                    android:orientation="vertical">


                                    <ImageButton
                                        android:id="@+id/action_bar_back"
                                        android:layout_width="wrap_content"
                                        android:layout_height="54dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@null"
                                        android:contentDescription="@null"
                                        android:onClick="onBackClick"
                                        android:paddingLeft="15dp"
                                        android:paddingRight="15dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/btn_back_buy_detail" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_size_10"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/lin_exchange"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="20dp">

                                        <LinearLayout
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:background="@drawable/btn_black_image"
                                            android:gravity="center"
                                            android:textSize="@dimen/text_size_14">

                                            <com.black.base.widget.SpanTextView
                                                android:id="@+id/name1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="k"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/text_size_18"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                        <com.black.base.widget.SpanTextView
                                            android:id="@+id/name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/text_size_5"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="40dp"
                                            android:text="kinki"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/text_size_18"
                                            android:textStyle="bold" />

                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:id="@+id/bar_true"
                                            android:layout_width="15dp"
                                            android:layout_height="15dp"
                                            android:layout_marginLeft="60dp"
                                            android:layout_marginTop="10dp"
                                            android:background="@drawable/c2c_star"
                                            android:visibility="gone">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_marginLeft="4dp"
                                                android:src="@drawable/c2c_gou_gou" />
                                        </LinearLayout>

                                        <ImageView
                                            android:id="@+id/bar_false"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="60dp"
                                            android:layout_marginTop="@dimen/text_size_10"
                                            android:src="@drawable/white_gou" />

                                        <com.black.base.widget.SpanTextView
                                            android:id="@+id/btn_exchange"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="none"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="@dimen/text_size_10"
                                            android:singleLine="true"
                                            android:text="认证广告方  |"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/text_size_14"
                                            android:textStyle="bold" />

                                        <com.black.base.widget.SpanTextView
                                            android:id="@+id/id"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="none"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="@dimen/text_size_10"
                                            android:singleLine="true"
                                            android:text="保证金15,000 BUSD"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/text_size_14"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:id="@+id/mail"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <com.black.base.widget.SpanTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="none"
                                                android:paddingLeft="60dp"
                                                android:paddingTop="@dimen/text_size_10"
                                                android:singleLine="true"
                                                android:text="邮箱"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/text_size_14"
                                                android:textStyle="bold" />

                                            <ImageView
                                                android:id="@+id/bar_mail_false"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/text_size_12"
                                                android:paddingLeft="10dp"
                                                android:paddingRight="@dimen/text_size_20"
                                                android:src="@drawable/white_gou" />

                                            <LinearLayout
                                                android:id="@+id/bar_mail"
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:layout_marginLeft="@dimen/text_size_15"
                                                android:layout_marginTop="12dp"
                                                android:background="@drawable/c2c_star"
                                                android:visibility="gone">

                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:layout_marginLeft="4dp"
                                                    android:src="@drawable/c2c_gou_gou" />
                                            </LinearLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/phone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <com.black.base.widget.SpanTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="none"
                                                android:paddingLeft="10dp"
                                                android:paddingTop="@dimen/text_size_10"
                                                android:singleLine="true"
                                                android:text="手机"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/text_size_14"
                                                android:textStyle="bold" />

                                            <ImageView
                                                android:id="@+id/bar_phone_false"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/text_size_12"
                                                android:paddingLeft="10dp"
                                                android:paddingRight="@dimen/text_size_20"
                                                android:src="@drawable/white_gou" />

                                            <LinearLayout
                                                android:id="@+id/bar_phone"
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:layout_marginLeft="@dimen/text_size_15"
                                                android:layout_marginTop="12dp"
                                                android:background="@drawable/c2c_star"
                                                android:visibility="gone">

                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:layout_marginLeft="4dp"
                                                    android:src="@drawable/c2c_gou_gou" />
                                            </LinearLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/id_person"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <com.black.base.widget.SpanTextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:ellipsize="none"
                                                android:paddingLeft="10dp"
                                                android:paddingTop="@dimen/text_size_10"
                                                android:singleLine="true"
                                                android:text="身份"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/text_size_14"
                                                android:textStyle="bold" />

                                            <ImageView
                                                android:id="@+id/bar_person_false"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/text_size_12"
                                                android:paddingLeft="10dp"
                                                android:paddingRight="@dimen/text_size_20"
                                                android:src="@drawable/white_gou" />

                                            <LinearLayout
                                                android:id="@+id/bar_person"
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:layout_marginLeft="@dimen/text_size_15"
                                                android:layout_marginTop="12dp"
                                                android:background="@drawable/c2c_star"
                                                android:visibility="gone">

                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:layout_marginLeft="4dp"
                                                    android:src="@drawable/c2c_gou_gou" />
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </RelativeLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="none"
                            android:paddingLeft="30dp"
                            android:paddingTop="@dimen/text_size_10"
                            android:singleLine="true"
                            android:checked="true"
                            android:text="@string/message"
                            android:textColor="@color/tab_contranct_text"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="bold" />
                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/ad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="none"
                            android:paddingLeft="30dp"
                            android:paddingTop="@dimen/text_size_10"
                            android:singleLine="true"
                            android:text="广告"
                            android:textColor="@color/tab_contranct_text"
                            android:textSize="@dimen/text_size_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_size_2"
                        android:layout_marginTop="@dimen/text_size_5"
                        android:background="@color/C2">

                        <View
                            android:id="@+id/bar_b"
                            style="@style/ButtonGreen"
                            android:layout_width="30dp"
                            android:layout_height="5dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="10dp"
                            android:background="#E622C177" />
                        <View
                            android:id="@+id/bar_a"
                            style="@style/ButtonGreen"
                            android:layout_width="30dp"
                            android:layout_height="5dp"
                            android:visibility="gone"
                            android:layout_marginLeft="90dp"
                            android:layout_marginRight="10dp"
                            android:background="#E622C177" />
                    </LinearLayout>


                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:flipInterval="30"
                android:persistentDrawingCache="animation"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </RelativeLayout>
</layout>