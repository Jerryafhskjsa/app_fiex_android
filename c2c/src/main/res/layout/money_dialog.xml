<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="walletNormalModel"
            type="Object" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/B1"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/B2"
                    android:orientation="vertical">

                    <com.black.lib.view.InputLinearLayout
                        android:id="@+id/money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/text_size_10"
                        android:layout_marginLeft="@dimen/text_size_10"
                        android:layout_marginTop="@dimen/text_size_10"
                        android:layout_marginBottom="@dimen/text_size_10"
                        android:background="@drawable/bg_edittext_default"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.black.base.widget.SpanMaterialEditText
                            android:id="@+id/put_money"
                            style="@style/EditTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/example"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="0dp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="21dp"
                            android:background="@color/T11_ALPHA5">

                        </View>

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/get_mail_code"
                            style="@style/EditTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="CNY"
                            android:textColor="@color/T1"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_16" />
                    </com.black.lib.view.InputLinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/text_size_10"
                        android:layout_marginLeft="@dimen/text_size_10"
                        android:layout_marginTop="@dimen/text_size_10"
                        android:orientation="horizontal">

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/one"
                            style="@style/ButtonGrayLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/middle_padding"
                            android:text="100" />

                        <View
                            android:layout_width="5dp"
                            android:layout_height="@dimen/line" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/two"
                            style="@style/ButtonGrayLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/middle_padding"
                            android:text="1000" />
                        <View
                            android:layout_width="5dp"
                            android:layout_height="@dimen/line" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/three"
                            style="@style/ButtonGrayLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/middle_padding"
                            android:text="5000" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_10"
                        android:layout_marginRight="@dimen/text_size_10"
                        android:layout_marginTop="@dimen/text_size_5"
                        android:orientation="horizontal">

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/four"
                            style="@style/ButtonGrayLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/middle_padding"
                            android:text="1w" />

                        <View
                            android:layout_width="5dp"
                            android:layout_height="@dimen/line" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/five"
                            style="@style/ButtonGrayLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/middle_padding"
                            android:text="10w" />
                        <View
                            android:layout_width="5dp"
                            android:layout_height="@dimen/line" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/six"
                            style="@style/ButtonGrayLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/middle_padding"
                            android:text="20w" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_10"
                        android:layout_marginRight="@dimen/text_size_10"
                        android:layout_marginTop="@dimen/text_size_20"
                        android:orientation="horizontal">



                        <com.black.base.widget.SpanTextView
                            android:id="@+id/btn_cancel"
                            style="@style/ButtonGray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/text_size_10"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/middle_padding"
                            android:text="@string/reset" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="@dimen/line" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/btn_confirm"
                            style="@style/ButtonBlue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           android:gravity="center"
                            android:layout_weight="1"
                            android:padding="@dimen/middle_padding"
                            android:text="@string/confirm" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />




                </LinearLayout>
            </com.black.base.widget.ObserveScrollView>
    </LinearLayout>
</layout>