<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="c2cPayMethodsList"
            type="com.black.base.model.c2c.PayInfo" />
    </data>

    <FrameLayout
        style="@style/ButtonReturn"
        android:layout_marginLeft="@dimen/text_size_10"
        android:layout_marginRight="@dimen/text_size_10"
        android:layout_marginBottom="@dimen/text_size_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:paddingTop="@dimen/double_padding"
            android:paddingBottom="@dimen/double_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/cards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/text_size_20"
                        android:layout_height="@dimen/text_size_15"
                        android:background="@drawable/btn_cards_c2c"/>
                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_size_20"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/text_size_5"
                        android:text="@string/cards"
                        android:textColor="@color/black_real"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ali"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/text_size_20"
                        android:layout_height="@dimen/text_size_20"
                        android:background="@drawable/icon_payment_alipay"/>
                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_size_20"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/text_size_5"
                        android:text="@string/id_pay"
                        android:textColor="@color/black_real"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/wei_xin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/text_size_20"
                        android:layout_height="@dimen/text_size_20"
                        android:background="@drawable/icon_payment_wechat"/>
                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_size_20"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/text_size_5"
                        android:text="@string/wei_xin"
                        android:textColor="@color/black_real"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_2"
                        android:layout_marginTop="@dimen/text_size_15"
                        android:layout_marginBottom="@dimen/text_size_10"
                        android:text="超级无敌霹雳手雷"
                        android:textColor="@color/black_real"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold" />
                </LinearLayout>

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/num2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="30"
                        android:text="600060000660"
                        android:textSize="12dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bank"
                android:orientation="vertical">
                    <com.black.base.widget.SpanTextView
                        android:id="@+id/num3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_size_10"
                        android:text="中国建设银行"
                        android:textSize="12dp" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/num4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_10"
                    android:text="中国建设银行"
                    android:textSize="12dp" />
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/ma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/text_size_10"
                    android:orientation="horizontal">

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/num5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收款码"
                        android:textSize="12dp" />
                    <ImageView
                        android:id="@+id/num6"
                        android:layout_width="@dimen/text_size_15"
                        android:layout_height="@dimen/text_size_15"
                        android:layout_marginLeft="@dimen/text_size_20"
                        android:background="@drawable/btn_two_ma"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/middle_padding"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bian_ji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/btn_xie" />

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/c2c_delete" />
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>
</layout>