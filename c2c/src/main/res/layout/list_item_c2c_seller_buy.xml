<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="listItemC2CSallerBuyModel"
            type="com.black.base.model.c2c.C2CMainAD" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingTop="@dimen/double_padding"
            android:paddingBottom="@dimen/double_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/c2c_cards_color"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                    <com.black.base.widget.SpanTextView
                        android:id="@+id/first_letter"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_size_20"
                        android:layout_marginLeft="@dimen/text_size_5"
                        android:layout_marginRight="@dimen/text_size_5"
                        android:gravity="center"
                        android:text="春风"
                        android:textColor="@color/T4"
                        android:textSize="@dimen/text_size_10"
                        android:textStyle="bold" />
                    </LinearLayout>
                    <com.black.base.widget.SpanTextView
                        android:id="@+id/id"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_size_20"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/text_size_5"
                        android:text="春风十里"
                        android:textColor="@color/black_real"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="@dimen/text_size_2"
                        android:background="@drawable/c2c_star">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_gravity="center"
                            android:src="@drawable/c2c_gou_gou" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.black.base.widget.SpanTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_10"
                    android:maxLength="30"
                    android:text="单价"
                    android:textColor="@color/T3"
                    android:textSize="11dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <com.black.base.widget.SpanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_size_10"
                    android:maxLength="30"
                    android:text="￥"
                    android:textColor="@color/black_real"
                    android:textStyle="bold"
                    android:textSize="10dp" />
                    <com.black.base.widget.SpanTextView
                        android:id="@+id/num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_size_10"
                        android:layout_marginLeft="@dimen/text_size_2"
                        android:text="6.88"
                        android:textColor="@color/black_real"
                        android:textStyle="bold"
                        android:textSize="20dp" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_size_5"
                android:orientation="horizontal">
                <com.black.base.widget.SpanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="30"
                    android:text="数量"
                    android:textColor="@color/T3"
                    android:textSize="11dp" />
                <com.black.base.widget.SpanTextView
                    android:id="@+id/num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_10"
                    android:text="1000 USDT"
                    android:textColor="@color/black_real"
                    android:textStyle="bold"
                    android:textSize="11dp" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_size_5"
                    android:orientation="horizontal">
                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="30"
                        android:text="限额"
                        android:textColor="@color/T3"
                        android:textSize="11dp" />
                    <com.black.base.widget.SpanTextView
                        android:id="@+id/num3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_10"
                        android:text="￥ 50，000 - ￥ 100，000"
                        android:textColor="@color/black_real"
                        android:textStyle="bold"
                        android:textSize="11dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/bg_divider"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/cards"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/c2c_cards_color"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_10"
                        android:layout_gravity="center_vertical"
                        android:text="@string/cards" />

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/wei_xin"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/wei_xin_color"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_10"
                        android:layout_gravity="center_vertical"
                        android:text="@string/wei_xin" />

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/ali"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ali_color"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_10"
                        android:layout_gravity="center_vertical"
                        android:text="@string/id_pay" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/middle_padding"
                android:gravity="right"
                android:orientation="vertical">

                <com.black.base.widget.SpanTextView
                    android:id="@+id/finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成单量 73 | 成单率 93.60%"
                    android:textColor="@color/T3"
                    android:textSize="11dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/btn_handle"
                    style="@style/ButtonBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:clickable="false"
                    android:paddingLeft="@dimen/double_padding"
                    android:paddingRight="@dimen/double_padding"
                    android:text="@string/c2c_buy"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/btn_handle_sell"
                    style="@style/ButtonBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/double_padding"
                    android:paddingRight="@dimen/double_padding"
                    android:text="@string/c2c_sell"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>
</layout>