<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="c2cOrderDetailModel"
            type="Object" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/B2">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_layout"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    style="@style/CollapsingToolbarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed"
                    app:titleEnabled="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="109dp"
                        app:layout_collapseMode="pin">

                        <com.black.base.widget.SpanAutoTextView
                            android:id="@id/action_bar_title_big"
                            style="@style/TitleStyle"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0dp"
                            android:maxLines="1"
                            android:textSize="@dimen/text_size_28"
                            app:maxTextSize="@dimen/text_size_28"
                            app:minTextSize="@dimen/text_size_5" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="@dimen/double_padding"
                            android:layout_marginBottom="@dimen/double_padding"
                            android:divider="@drawable/bg_divider_8"
                            android:orientation="horizontal"
                            android:showDividers="middle">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/warning"
                                android:layout_width="58dp"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/icon_c2c_note"
                                android:drawablePadding="4dp"
                                android:gravity="center"
                                android:text="注意事项"
                                android:textColor="@color/C1"
                                android:textSize="@dimen/text_size_13" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/phone"
                                android:layout_width="58dp"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/icon_c2c_phone"
                                android:drawablePadding="4dp"
                                android:gravity="center"
                                android:text="电话"
                                android:textColor="@color/C1"
                                android:textSize="@dimen/text_size_13" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/talk"
                                android:layout_width="58dp"
                                android:layout_height="wrap_content"
                                android:drawableTop="@drawable/icon_c2c_chat"
                                android:drawablePadding="4dp"
                                android:gravity="center"
                                android:text="联系对方"
                                android:textColor="@color/C1"
                                android:textSize="@dimen/text_size_13" />
                        </LinearLayout>
                    </RelativeLayout>

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@color/B2"
                        android:theme="@style/AppTheme"
                        app:contentInsetLeft="0dp"
                        app:contentInsetStart="0dp"
                        app:layout_collapseMode="pin"
                        app:theme="@style/AppTheme"
                        app:titleMargin="0dp"
                        app:titleTextAppearance="@style/ToolBarTitleStyle">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/action_bar_back"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:onClick="onBackClick"
                                android:paddingLeft="@dimen/double_padding"
                                android:paddingRight="@dimen/double_padding"
                                android:scaleType="centerInside"
                                android:src="@drawable/btn_back" />

                            <com.black.base.widget.SpanTextView
                                android:id="@id/action_bar_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:textColor="@color/T1"
                                android:textSize="@dimen/text_size_20" />

                            <LinearLayout
                                android:id="@+id/top_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginRight="15dp"
                                android:orientation="horizontal"
                                android:showDividers="middle">

                                <ImageView
                                    android:id="@+id/warning2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/default_padding"
                                    android:src="@drawable/icon_c2c_note" />

                                <ImageView
                                    android:id="@+id/phone2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/default_padding"
                                    android:src="@drawable/icon_c2c_phone" />

                                <ImageView
                                    android:id="@+id/talk2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/default_padding"
                                    android:src="@drawable/icon_c2c_chat" />
                            </LinearLayout>
                        </FrameLayout>

                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_padding"
                    android:background="@color/B1" />
            </com.google.android.material.appbar.AppBarLayout>

            <com.black.lib.refresh.QRefreshLayout
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.black.base.widget.ObserveScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/B2"
                    android:fadingEdge="none"
                    android:fillViewport="true"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/double_padding"
                            android:paddingTop="15dp"
                            android:paddingRight="@dimen/double_padding"
                            android:paddingBottom="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/coin_icon"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/action"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="8dp"
                                    android:text="@string/c2c_buy_usdt"
                                    android:textColor="@color/T1"
                                    android:textSize="@dimen/text_size_16" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right|center_vertical"
                                    android:orientation="horizontal">

                                    <com.black.base.widget.SpanTextView
                                        android:id="@+id/money_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="4dp"
                                        android:text="实付款"
                                        android:textColor="@color/T1"
                                        android:textSize="@dimen/text_size_16" />

                                    <com.black.base.widget.SpanTextView
                                        android:id="@+id/money"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="4dp"
                                        android:text="@string/number_default"
                                        android:textColor="@color/C1"
                                        android:textSize="@dimen/text_size_16"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/number_default"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_13" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/number_default"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_13" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/buy_info_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/buy_info_note"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/B1"
                                android:paddingLeft="@dimen/double_padding"
                                android:paddingTop="@dimen/double_padding"
                                android:paddingRight="@dimen/double_padding"
                                android:paddingBottom="@dimen/default_padding"
                                android:text=""
                                android:textColor="@color/T5"
                                android:textSize="@dimen/text_size_12" />

                            <LinearLayout
                                android:id="@+id/merchant_type_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/double_padding">

                                <ImageView
                                    android:id="@+id/pay_icon"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitXY" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/merchant_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:drawableRight="@drawable/icon_left"
                                    android:text="@string/number_default"
                                    android:textColor="@color/T1"
                                    android:textSize="@dimen/text_size_16" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/double_padding">

                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="收款人"
                                    android:textColor="@color/T2"
                                    android:textSize="@dimen/text_size_16" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/merchant_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:drawableRight="@drawable/icon_c2c_copy"
                                    android:drawablePadding="8dp"
                                    android:gravity="right"
                                    android:text="@string/number_default"
                                    android:textColor="@color/T1"
                                    android:textSize="@dimen/text_size_16" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/double_padding">

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/content"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="收款二维码"
                                    android:textColor="@color/T2"
                                    android:textSize="@dimen/text_size_16" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/merchant_qrcode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:drawableRight="@drawable/icon_c2c_qrcode"
                                    android:drawablePadding="8dp"
                                    android:gravity="right"
                                    android:textColor="@color/T1"
                                    android:textSize="@dimen/text_size_16" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/bank_name_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/double_padding">

                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="开户行"
                                    android:textColor="@color/T2"
                                    android:textSize="@dimen/text_size_16" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/bank_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:drawableRight="@drawable/icon_c2c_copy"
                                    android:drawablePadding="8dp"
                                    android:gravity="right"
                                    android:text="@string/number_default"
                                    android:textColor="@color/T1"
                                    android:textSize="@dimen/text_size_16" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="@dimen/double_padding">

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/pay_account_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="支付宝账号"
                                    android:textColor="@color/T2"
                                    android:textSize="@dimen/text_size_16" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/pay_account"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:drawableRight="@drawable/icon_c2c_copy"
                                    android:drawablePadding="8dp"
                                    android:gravity="right"
                                    android:text="@string/number_default"
                                    android:textColor="@color/T1"
                                    android:textSize="@dimen/text_size_16" />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/default_padding"
                            android:background="@color/B1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/double_padding">

                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单号"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_16" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/order_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:drawableRight="@drawable/icon_c2c_copy"
                                android:drawablePadding="8dp"
                                android:gravity="right"
                                android:text="@string/number_default"
                                android:textColor="@color/T1"
                                android:textSize="@dimen/text_size_16" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sale_note_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/default_padding"
                                android:background="@color/B1"
                                android:visibility="gone" />

                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/double_padding"
                                android:text="审核通过后需要点击右上方联系对方沟通收款方式"
                                android:textColor="@color/T7"
                                android:textSize="@dimen/text_size_13"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>
                </com.black.base.widget.ObserveScrollView>
            </com.black.lib.refresh.QRefreshLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <com.black.base.widget.SpanTextView
                android:id="@+id/count_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:background="@color/C1_ALPHA10"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingTop="6dp"
                android:paddingRight="15dp"
                android:paddingBottom="6dp"
                android:text="@string/number_default"
                android:textColor="@color/C1"
                android:textSize="@dimen/text_size_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/bg_divider_20"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/double_padding"
                android:paddingTop="@dimen/default_padding"
                android:paddingRight="@dimen/double_padding"
                android:paddingBottom="@dimen/double_padding"
                android:showDividers="middle">

                <com.black.base.widget.SpanTextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@drawable/btn_gray"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/c2c_cancel_order"
                    android:textColor="@color/T8"
                    android:textSize="@dimen/text_size_15"
                    android:visibility="gone" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/btn_pay"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/c2c_paid"
                    android:textColor="@color/T8"
                    android:textSize="@dimen/text_size_15"
                    android:visibility="gone" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/btn_release"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/c2c_release"
                    android:textColor="@color/T8"
                    android:textSize="@dimen/text_size_15"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>