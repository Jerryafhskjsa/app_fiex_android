<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="c2cCustomerModel"
            type="Object" />
    </data>

    <skin.support.widget.SkinCompatLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/C1"
            android:orientation="horizontal">

            <com.black.base.widget.SpanCheckedTextView
                android:id="@+id/btn_c2c_tab_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:checked="true"
                android:drawableBottom="@drawable/icon_login_tab"
                android:gravity="center"
                android:maxLines="1"
                android:text="我要买"
                android:textColor="@color/c2c_tab_inner"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <com.black.base.widget.SpanCheckedTextView
                android:id="@+id/btn_c2c_tab_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/double_padding"
                android:layout_toRightOf="@+id/btn_c2c_tab_buy"
                android:layout_weight="1"
                android:drawableBottom="@drawable/icon_login_tab"
                android:gravity="center"
                android:maxLines="1"
                android:text="我要卖"
                android:textColor="@color/c2c_tab_inner"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <com.black.base.widget.SpanCheckedTextView
                android:id="@+id/head_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_gravity="right|center_vertical"
                android:adjustViewBounds="true"
                android:background="@null"
                android:contentDescription="@null"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:paddingLeft="15dip"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="12dp"
                android:scaleType="fitXY"
                android:text="我的订单"
                android:textColor="@color/white" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </skin.support.widget.SkinCompatLinearLayout>
</layout>