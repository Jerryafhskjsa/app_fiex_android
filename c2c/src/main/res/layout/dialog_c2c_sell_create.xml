<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/B2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/double_padding"
        android:paddingTop="15dp"
        android:paddingRight="@dimen/double_padding"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <com.black.base.widget.SpanTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/icon"
            android:text="@string/c2c_buy_usdt"
            android:textColor="@color/T1"
            android:textSize="@dimen/text_size_16" />

        <com.black.base.widget.SpanTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/price"
            android:text="@string/unit_price"
            android:textColor="@color/T1"
            android:textSize="@dimen/text_size_16" />

        <com.black.base.widget.SpanTextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/T5"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/L1_ALPHA60" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/double_padding">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/type_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/radio_c2c"
                android:drawablePadding="4dp"
                android:text="按金额出售"
                android:textColor="@color/radio_c2c"
                android:textSize="@dimen/text_size_14" />

            <RadioButton
                android:id="@+id/type_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:button="@null"
                android:drawableLeft="@drawable/radio_c2c"
                android:drawablePadding="4dp"
                android:text="按数量出售"
                android:textColor="@color/radio_c2c"
                android:textSize="@dimen/text_size_14" />
        </RadioGroup>

        <com.black.lib.view.InputLinearLayout
            android:id="@+id/cny_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_box"
            android:orientation="vertical"
            android:paddingTop="@dimen/double_padding">

            <com.black.base.widget.SpanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/c2c_sell_cny"
                android:textColor="@color/T1"
                android:textSize="@dimen/text_size_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.black.base.widget.SpanMaterialEditText
                    android:id="@+id/cny_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/c2c_sell_create_cny"
                    android:inputType="text"
                    android:maxLines="1" />

                <com.black.base.widget.SpanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/cny"
                    android:textColor="@color/T1"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </com.black.lib.view.InputLinearLayout>

        <com.black.lib.view.InputLinearLayout
            android:id="@+id/amount_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_box"
            android:orientation="vertical"
            android:paddingTop="@dimen/double_padding">

            <com.black.base.widget.SpanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/c2c_sell_amount"
                android:textColor="@color/T1"
                android:textSize="@dimen/text_size_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.black.base.widget.SpanMaterialEditText
                    android:id="@+id/edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/c2c_sell_create_amount"
                    android:inputType="text"
                    android:maxLines="1" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/coin_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/usdt"
                    android:textColor="@color/T1"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </com.black.lib.view.InputLinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/double_padding"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.black.base.widget.SpanTextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_gray"
                android:gravity="center"
                android:padding="13dp"
                android:text="@string/cancel"
                android:textColor="@color/T8"
                android:textSize="@dimen/text_size_16" />

            <View
                android:layout_width="@dimen/double_padding"
                android:layout_height="match_parent" />

            <com.black.base.widget.SpanTextView
                android:id="@+id/btn_buy_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_blue"
                android:gravity="center"
                android:padding="13dp"
                android:text="@string/c2c_sell_confirm"
                android:textColor="@color/T8"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>