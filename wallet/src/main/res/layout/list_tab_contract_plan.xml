<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="listTabContractPlan"
            type="Object" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/B2"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_size_10"
                android:layout_marginLeft="@dimen/text_size_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.black.base.widget.SpanTextView
                    android:id="@+id/positionSide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/T16"
                    android:padding="@dimen/text_size_2"
                    android:text="@string/contract_see_down"
                    android:textSize="@dimen/text_size_10"
                    android:textAlignment="center"
                    android:textColor="@color/T8" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/positionDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="@string/perpetual_warehouse_by_warehouse"
                    android:textAlignment="center"
                    android:textColor="@color/T14"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />
                <com.black.base.widget.SpanTextView
                    android:id="@+id/beishu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F1F3F4"
                    android:layout_marginLeft="@dimen/text_size_5"
                    android:paddingLeft="8dp"
                    android:paddingTop="3dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="3dp"
                    android:text="20X"
                    android:textAlignment="center"
                    android:textColor="@color/T2"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right">

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/tv_revoke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/revoke"
                        android:textColor="@color/T2"
                        android:drawablePadding="@dimen/text_size_2"
                        android:drawableRight="@drawable/youla"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <com.black.base.widget.SpanTextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_size_10"
                android:layout_marginLeft="@dimen/text_size_10"
                android:text="ID: 31236512675"
                android:gravity="center"
                android:textSize="@dimen/text_size_10"
                android:drawableRight="@drawable/fuzhi"
                android:textAlignment="center"
                android:textColor="@color/T2" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/text_size_10"
                android:layout_marginBottom="@dimen/text_size_10"
                android:background="@color/B1"/>
            <com.black.base.widget.SpanTextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/text_size_10"
                android:text="2022/12/11"
                android:textColor="@color/T11_ALPHA60"
                android:textSize="@dimen/text_size_12" />
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/text_size_10"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/text_size_10"
                android:background="@color/B1"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/text_size_10"
                android:layout_marginLeft="@dimen/text_size_10"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical">

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/tv_entrust_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="委托价格(%s)"
                        android:textColor="@color/T11_ALPHA60"
                        android:textSize="@dimen/text_size_10" />

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/tv_entrust_price_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding"
                        android:text="1"
                        android:textColor="@color/T14"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/tv_entrust_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contract_entrust_amount"
                        android:textColor="@color/T11_ALPHA60"
                        android:textSize="@dimen/text_size_10" />

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/tv_entrust_amount_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding"
                        android:text="19888"
                        android:textColor="@color/T14"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/tv_deal_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手续费(%s)"
                        android:textColor="@color/T11_ALPHA60"
                        android:textSize="@dimen/text_size_10" />

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/tv_deal_amount_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding"
                        android:text="20000"
                        android:textColor="@color/T14"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/text_size_10"
                android:layout_marginLeft="@dimen/text_size_10"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical">

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/tv_profit_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成交均价(%s)"
                        android:textColor="@color/T11_ALPHA60"
                        android:textSize="@dimen/text_size_10" />

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/tv_profit_price_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding"
                        android:text="19888"
                        android:textColor="@color/T14"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/tv_lose_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contract_deal_amount"
                        android:textColor="@color/T11_ALPHA60"
                        android:textSize="@dimen/text_size_10" />

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/tv_lose_price_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding"
                        android:text="20000"
                        android:textColor="@color/T14"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/tv_bond_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="平仓盈亏(%s)"
                        android:textColor="@color/T11_ALPHA60"
                        android:textSize="@dimen/text_size_10" />

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/tv_bond_amount_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding"
                        android:text="1"
                        android:textColor="@color/T14"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/text_size_10"
                android:layout_marginLeft="@dimen/text_size_10"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical">

                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="委托时间"
                        android:textColor="@color/T11_ALPHA60"
                        android:textSize="@dimen/text_size_10" />

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/tv_create_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding"
                        android:text="2020:11"
                        android:textColor="@color/T14"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更新时间"
                        android:textColor="@color/T11_ALPHA60"
                        android:textSize="@dimen/text_size_10" />

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_padding"
                        android:text="2023/11/22 2:00"
                        android:textColor="@color/T14"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/B1"/>

        </LinearLayout>
    </FrameLayout>
</layout>