<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="listItemWalletWithdrawAddressContentModel"
            type="com.black.base.model.wallet.WalletAddress" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/double_padding"
        android:paddingBottom="@dimen/double_padding">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_wallet_adress" />
        <View
            android:layout_width="@dimen/default_padding"
            android:layout_height="@dimen/line" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <com.black.base.widget.SpanTextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="222"
                android:textColor="@color/T1"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />
            <View
                android:layout_width="@dimen/middle_padding"
                android:layout_height="@dimen/default_padding" />
            <com.black.base.widget.SpanTextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="1111"
                android:textColor="@color/T2"
                android:textSize="@dimen/text_size_13" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_wallet_withdraw_address_more" />
    </LinearLayout>
</layout>