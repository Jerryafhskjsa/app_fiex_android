<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="walletModel"
            type="java.util.ArrayList" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/C1">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    style="@style/CollapsingToolbarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed"
                    app:titleEnabled="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_collapseMode="pin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="48dp"
                            android:background="@drawable/bg_wallet_header"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"
                            android:paddingTop="@dimen/double_padding"
                            android:paddingRight="15dp"
                            android:paddingBottom="@dimen/double_padding">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left|center_vertical"
                                android:orientation="horizontal">

                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/wallet_total_usdt"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_13" />

                                <View
                                    android:layout_width="8dp"
                                    android:layout_height="@dimen/line" />

                                <CheckBox
                                    android:id="@+id/btn_wallet_eye"
                                    android:layout_width="18dp"
                                    android:layout_height="14dp"
                                    android:background="@drawable/btn_wallet_eyes"
                                    android:button="@null"
                                    android:scaleType="fitXY" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:baselineAligned="true"
                                android:gravity="center_vertical"
                                android:minHeight="40dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:baselineAligned="true"
                                    android:orientation="horizontal">

                                    <com.black.base.widget.SpanAutoTextView
                                        android:id="@+id/money"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxWidth="150dp"
                                        android:maxLines="1"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_size_28" />

                                    <com.black.base.widget.SpanTextView
                                        android:id="@+id/money_cny"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:drawableRight="@drawable/icon_left_white"
                                        android:drawablePadding="4dp"
                                        android:maxLines="1"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_size_20"
                                        app:minTextSize="@dimen/text_size_10" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="8dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/btn_exchange"
                                    android:layout_width="0dp"
                                    android:layout_height="28dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_wallet_button"
                                    android:ellipsize="none"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="@string/rechange"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_14"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="@dimen/line" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/btn_withdraw"
                                    android:layout_width="0dp"
                                    android:layout_height="28dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_wallet_button"
                                    android:ellipsize="none"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="@string/extract"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_14"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="@dimen/line" />

                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/btn_demand"
                                    android:layout_width="0dp"
                                    android:layout_height="28dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_wallet_button"
                                    android:ellipsize="none"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="划转"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_14"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                    </RelativeLayout>

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/C1"
                        android:theme="@style/AppTheme"
                        app:contentInsetLeft="0dp"
                        app:contentInsetStart="0dp"
                        app:layout_collapseMode="pin"
                        app:theme="@style/AppTheme"
                        app:titleMargin="0dp"
                        app:titleTextAppearance="@style/ToolBarTitleStyle">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/action_bar_back"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:onClick="onBackClick"
                                android:paddingLeft="@dimen/double_padding"
                                android:paddingRight="@dimen/double_padding"
                                android:scaleType="centerInside"
                                android:src="@drawable/btn_back_white" />

                            <com.black.base.widget.SpanTextView
                                android:id="@id/action_bar_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_20" />

                        </FrameLayout>

                    </androidx.appcompat.widget.Toolbar>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:fadingEdge="none"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    app:tabBackground="@color/transparent"
                    app:tabRippleColor="@color/transparent"
                    app:tabTextAppearance="@style/DefaultTabStyle" />
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:flipInterval="30"
                android:persistentDrawingCache="animation"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </FrameLayout>
</layout>