<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="financialRecordModel"
            type="Object" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    style="@style/CollapsingToolbarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed"
                    app:titleEnabled="true">


                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/B2"
                        android:theme="@style/AppTheme"
                        app:contentInsetLeft="0dp"
                        app:contentInsetStart="0dp"
                        app:layout_collapseMode="pin"
                        app:theme="@style/AppTheme"
                        app:titleMargin="0dp"
                        app:titleTextAppearance="@style/ToolBarTitleStyle">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/action_bar_back"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:onClick="onBackClick"
                                android:paddingLeft="@dimen/double_padding"
                                android:paddingRight="@dimen/double_padding"
                                android:scaleType="centerInside"
                                android:src="@drawable/btn_back" />

                            <com.black.base.widget.SpanTextView
                                android:id="@id/action_bar_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:textColor="@color/T1"
                                android:textSize="@dimen/text_size_20" />


                        </FrameLayout>

                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/default_padding"
                    android:background="@color/B1" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/bg_asset_coin_corner"
                    android:fadingEdge="none"
                    app:layout_constraintRight_toRightOf="parent"
                    app:tabRippleColor="@color/transparent"
                    app:tabMode="scrollable"
                    app:tabMaxWidth="200dp"
                    app:tabMinWidth="20dp"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    />
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/text_size_10"
                android:layout_marginLeft="@dimen/text_size_10"
                android:flipInterval="30"
                android:persistentDrawingCache="animation"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </FrameLayout>
</layout>
