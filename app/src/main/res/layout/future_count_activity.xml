<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/B2">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@id/app_bar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:elevation="12dp"
                    android:theme="@style/AppTheme"
                    app:elevation="12dp">

                    <include layout="@layout/tool_bar_left_back" />

                </com.google.android.material.appbar.AppBarLayout>

                <com.black.base.widget.ObserveScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/text_size_16"
                    android:layout_marginRight="@dimen/text_size_16"
                    android:fadingEdge="none"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_16"
                android:orientation="horizontal">

                <com.black.base.widget.SpanCheckedTextView
                    android:id="@+id/shouyi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="收益"
                    android:checked="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/c2c_tab_sale" />
                <com.black.base.widget.SpanCheckedTextView
                    android:id="@+id/pingcang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="平仓价格"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/c2c_tab_sale" />
                <com.black.base.widget.SpanCheckedTextView
                    android:id="@+id/qiangping"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="强平价格"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/c2c_tab_sale"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginTop="@dimen/text_size_10"
                android:layout_marginRight="@dimen/default_padding"
                android:orientation="horizontal">


                <com.black.base.widget.SpanTextView
                    android:id="@+id/positionDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/daohanglan"
                    android:textColor="@color/T14"
                    android:text="BTC_USDT"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold" />
                <com.black.base.widget.SpanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="@string/sustainable"
                    android:textAlignment="center"
                    android:textColor="@color/T14"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </LinearLayout>
                <com.black.base.widget.SpanTextView
                    android:id="@+id/xuanzhe"
                    android:layout_width="93dp"
                    android:layout_height="25dp"
                    android:background="@drawable/btn_gray"
                    android:gravity="center_vertical"
                    android:text="100X"
                    android:paddingRight="8dp"
                    android:paddingLeft="@dimen/text_size_10"
                    android:paddingBottom="3dp"
                    android:textSize="@dimen/text_size_12"
                    android:drawableRight="@drawable/xiala"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="@dimen/text_size_10"
            android:layout_marginLeft="@dimen/text_size_10"
            android:layout_marginTop="@dimen/text_size_16"
            android:orientation="horizontal">
            <com.black.base.widget.SpanCheckedTextView
                android:id="@+id/duo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/btn_gray"
                android:checked="true"
                android:layout_weight="4"
                android:gravity="center"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                android:textColor="@color/k_time_step_tab_text_color"
                android:layout_marginRight="@dimen/text_size_10"
                android:text="做多"
                />
            <com.black.base.widget.SpanCheckedTextView
                android:id="@+id/kong"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/btn_gray"
                android:layout_weight="4"
                android:gravity="center"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/k_time_step_tab_text_color"
                android:text="做空"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_size_10"
            android:layout_marginLeft="@dimen/text_size_10"
            android:orientation="horizontal">
            <com.black.base.widget.SpanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="开仓价格"
                android:textColor="@color/T2"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/text_size_10"
            android:layout_marginLeft="@dimen/text_size_10"
            android:layout_marginTop="@dimen/text_size_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_gray"
                android:gravity="center"
                android:layout_weight="2"
                android:orientation="horizontal">
                <com.black.base.widget.SpanMaterialEditText
                    style="@style/NormalEditTextStyle"
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center_vertical|left"
                    android:padding="@dimen/text_size_10"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/black"
                    android:hint="@string/price"
                    />
                <com.black.base.widget.SpanTextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_gray"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/T3"
                    android:text="USDT"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_size_10"
            android:layout_marginLeft="@dimen/text_size_10"
            android:orientation="horizontal">
            <com.black.base.widget.SpanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_10"
                android:layout_weight="2"
                android:text="平仓价格"
                android:textColor="@color/T2"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/text_size_10"
            android:layout_marginLeft="@dimen/text_size_10"
            android:layout_marginTop="@dimen/text_size_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_gray"
                android:gravity="center"
                android:layout_weight="2"
                android:orientation="horizontal">
                <com.black.base.widget.SpanMaterialEditText
                    style="@style/NormalEditTextStyle"
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center_vertical|left"
                    android:padding="@dimen/text_size_10"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/black"
                    android:hint="@string/price"
                    />
                <com.black.base.widget.SpanTextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_gray"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/T3"
                    android:text="USDT"
                    />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_size_10"
            android:layout_marginLeft="@dimen/text_size_10"
            android:orientation="horizontal">
            <com.black.base.widget.SpanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="@dimen/text_size_10"
                android:text="成交数量"
                android:textColor="@color/T2"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/text_size_10"
            android:layout_marginLeft="@dimen/text_size_10"
            android:layout_marginTop="@dimen/text_size_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_gray"
                android:gravity="center"
                android:layout_weight="2"
                android:orientation="horizontal">
                <com.black.base.widget.SpanMaterialEditText
                    style="@style/NormalEditTextStyle"
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center_vertical|left"
                    android:padding="@dimen/text_size_10"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/black"
                    android:hint="@string/amount"
                    />
                <com.black.base.widget.SpanTextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_gray"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/T3"
                    android:text="USDT"
                    />
            </LinearLayout>



        </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_size_10"
                    android:layout_marginLeft="@dimen/text_size_10"
                    android:orientation="horizontal">
                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginTop="@dimen/text_size_16"
                        android:text="计算结果"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                        <LinearLayout
                            android:id="@+id/price"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginRight="@dimen/text_size_10"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/btn_gray"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:orientation="horizontal">
                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/four"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="6"
                                    android:gravity="center_vertical|left"
                                    android:padding="@dimen/text_size_10"
                                    android:textSize="@dimen/text_size_12"
                                    android:textColor="@color/black"
                                    android:hint="平仓价格"
                                    />
                                <com.black.base.widget.SpanTextView
                                    android:id="@+id/first"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/btn_gray"
                                    android:layout_weight="1"
                                    android:textSize="@dimen/text_size_16"
                                    android:textColor="@color/black"
                                    android:text="-USDT"
                                    />
                            </LinearLayout>



                        </LinearLayout>
                <LinearLayout
                    android:id="@+id/result_shouyi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/text_size_10"
                    android:layout_marginLeft="@dimen/text_size_10"
                    android:layout_marginTop="@dimen/text_size_10"
                    android:gravity="center"
                    android:background="@drawable/btn_gray"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/text_size_10"
                        android:layout_marginBottom="@dimen/text_size_10"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/text_size_10"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/T3"
                            android:text="开仓保证金"
                            />
                        <com.black.base.widget.SpanTextView
                            android:id="@+id/second"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_gray"
                            android:gravity="center_vertical|right"
                            android:paddingRight="@dimen/text_size_10"
                            android:layout_weight="2"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black"
                            android:text="0.00USDT"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/text_size_10"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/text_size_10"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/T3"
                            android:text="收益"
                            />
                        <com.black.base.widget.SpanTextView
                            android:id="@+id/third"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_gray"
                            android:gravity="center_vertical|right"
                            android:paddingRight="@dimen/text_size_10"
                            android:layout_weight="2"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black"
                            android:text="0.00USDT"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/text_size_10"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="@dimen/text_size_10"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/T3"
                            android:hint="回报率"
                            />
                        <com.black.base.widget.SpanTextView
                            android:id="@+id/fourth"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/btn_gray"
                            android:gravity="center_vertical|right"
                            android:paddingRight="@dimen/text_size_10"
                            android:layout_weight="2"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/black"
                            android:text="0.00%"
                            />
                    </LinearLayout>



                </LinearLayout>
                        <LinearLayout
                            android:id="@+id/tishi"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/text_size_10"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:orientation="horizontal">
                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_marginTop="@dimen/text_size_16"
                                android:text="注：强平价格的计算仅考虑单个仓位的具体情况，若您已有持仓，此处的强平价格仅作参考，具体价格以仓位显示为准。"
                                android:textColor="@color/T13"
                                android:textSize="@dimen/text_size_10" />
                        </LinearLayout>
            </LinearLayout>
        </com.black.base.widget.ObserveScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
            <LinearLayout
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/anniu"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/text_size_10"
                android:layout_marginRight="@dimen/text_size_10"
                android:layout_marginBottom="@dimen/text_size_28"
                android:gravity="center"
                android:orientation="horizontal">
                <com.black.base.widget.SpanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="计算"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </RelativeLayout>
</layout>