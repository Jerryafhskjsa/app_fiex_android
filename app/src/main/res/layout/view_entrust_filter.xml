<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewEntrustFilterModel"
            type="Object" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/T1_ALPHA60"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/work_space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/B2"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line"
                    android:background="@color/L1_ALPHA30" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/double_padding">

                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pair"
                        android:textColor="@color/T1"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.black.base.widget.SpanMaterialEditText
                            android:id="@+id/coin_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_entrust_filter_input"
                            android:hint="@string/coin_type"
                            android:maxLines="1"
                            android:paddingLeft="8dp"
                            android:paddingTop="6dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="6dp"
                            android:textSize="@dimen/text_size_14" />

                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:text="/"
                            android:textColor="@color/T1"
                            android:textSize="@dimen/text_size_14" />

                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/set_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_entrust_filter_input"
                            android:drawableRight="@drawable/icon_entrust_filter_set"
                            android:hint="@string/hint_entrust_filter_set"
                            android:maxLines="1"
                            android:paddingLeft="8dp"
                            android:paddingTop="6dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="6dp"
                            android:textColor="@color/T1"
                            android:textColorHint="@color/T3"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/double_padding"
                            android:fadingEdge="none"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never"
                            android:scrollbars="none" />

                    </RelativeLayout>

                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/double_padding"
                        android:text="@string/entrust_type"
                        android:textColor="@color/T1"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/all"
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_entrust_filter_type"
                            android:gravity="center"
                            android:text="全部委托"
                            android:textAlignment="center"
                            android:textColor="@color/entrust_filter_type_text_color"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="@dimen/line" />

                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/coin"
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_entrust_filter_type"
                            android:gravity="center"
                            android:text="币币委托"
                            android:textAlignment="center"
                            android:textColor="@color/entrust_filter_type_text_color"
                            android:textSize="@dimen/text_size_14" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="@dimen/line" />

                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/lever"
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_entrust_filter_type"
                            android:gravity="center"
                            android:text="杠杆委托"
                            android:textAlignment="center"
                            android:textColor="@color/entrust_filter_type_text_color"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/double_padding"
                    android:orientation="horizontal">

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/btn_reset"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_border_l1"
                        android:gravity="center"
                        android:text="@string/reset"
                        android:textColor="@color/T2"
                        android:textSize="@dimen/text_size_15" />

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/btn_confirm"
                        style="@style/ButtonBlue"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_blue_no_corner"
                        android:gravity="center"
                        android:text="@string/confirm" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <View
            android:id="@+id/blank"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</layout>