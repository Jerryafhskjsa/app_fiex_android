<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg_transaction_input"
    android:layout_height="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/price_sub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingVertical="15dp"
            android:paddingStart="@dimen/default_padding"
            android:paddingEnd="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_price_buy_sub" />

        <com.black.base.widget.MaterialEditText
            android:id="@+id/price"
            style="@style/NormalEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_horizontal"
            android:hint="@string/price"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold"
            app:useDelete="false" />

        <ImageView
            android:id="@+id/price_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_price_buy_add" />
    </LinearLayout>
</FrameLayout>