<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="walletNormalModel"
            type="Object" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            style="@style/ButtonTanChuang"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/udesk_20"
            android:orientation="vertical">

            <com.black.base.widget.SpanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/zongquanyi" />

            <com.black.base.widget.SpanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_16"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="钱包余额+未实现盈" />
            <com.black.base.widget.SpanTextView
                android:id="@+id/btn_bills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_5"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="包括体验金 0 U" />
            <com.black.base.widget.SpanTextView
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:background="@drawable/anniu"
                android:layout_marginTop="@dimen/text_size_16"
                android:textColor="@color/white"
                android:text="知道了"
                />


        </LinearLayout>
    </LinearLayout>
</layout>