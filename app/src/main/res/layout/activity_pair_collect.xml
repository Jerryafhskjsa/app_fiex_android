<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:elevation="12dp"
        android:theme="@style/AppTheme"
        app:elevation="12dp">
        <include layout="@layout/tool_bar_left_back_login" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.black.base.widget.ObserveScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="15dp">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/main_tab"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="24dp"
                android:fadingEdge="none"
                android:textSize="@dimen/text_size_14"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:tabIndicator="@drawable/tabs_rounded_line_indicator"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorHeight="2dp"
                app:tabIndicatorColor="@color/T13"
                app:tabRippleColor="@color/transparent"
                app:tabSelectedTextColor="@color/black"
                app:tabTextAppearance="@style/MainTabStyle"
                app:tabTextColor="@color/grey">

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/spot" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/futures" />
            </com.google.android.material.tabs.TabLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/B1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/text_size_20">

                <com.black.base.widget.SpanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/market"
                    android:textSize="@dimen/text_size_10"
                    android:layout_gravity="right|center_vertical"
                    />
                <com.black.base.widget.SpanTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/zhiding"
                    android:textSize="@dimen/text_size_10"
                    android:gravity="right|center_vertical"
                    />
                <com.black.base.widget.SpanTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tuodong"
                    android:textSize="@dimen/text_size_10"
                    android:gravity="right|center_vertical"
                    />

            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/rise_fall_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" />
    </LinearLayout>
    </com.black.base.widget.ObserveScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/text_size_10"
            android:background="@color/B2"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/c2c_range"/>

            <com.black.base.widget.SpanCheckedTextView
                android:id="@+id/xuanzhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/text_size_16"
                android:text="@string/quanbu_xuan"
                android:textSize="@dimen/text_size_14"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/yichu"/>

        </LinearLayout>
    </RelativeLayout>
</layout>