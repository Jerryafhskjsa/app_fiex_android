                <com.black.base.widget.SpanTextView
                    android:id="@+id/count_buy_02"
                    style="@style/ContractDeepItemTextRight" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/handicap_buy_layout_03"
                style="@style/ContractDeepItemRel">

                <com.black.base.widget.SpanTextView
                    android:id="@+id/price_buy_03"
