            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/handicap_buy_layout_09"
                style="@style/ContractDeepItemRel">

                <com.black.base.widget.SpanTextView
                    android:id="@+id/price_buy_09"
                    style="@style/ContractDeepItemTextLeft1" />

                <com.black.base.widget.SpanTextView
