                    style="@style/ContractDeepItemTextRight" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/handicap_buy_layout_10"
                style="@style/ContractDeepItemRel">

                <com.black.base.widget.SpanTextView
                    android:id="@+id/price_buy_10"
                    style="@style/ContractDeepItemTextLeft1" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/count_buy_10"
                    style="@style/ContractDeepItemTextRight" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_padding" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:visibility="visible">

            <com.black.base.widget.SpanTextView
                android:id="@+id/deep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_transaction_input"
                android:drawableRight="@drawable/icon_deep"
                android:drawablePadding="8dp"
                android:includeFontPadding="false"
                android:padding="8dp"
                android:text="@string/number_default"
                android:textColor="@color/T2"
                android:textSize="@dimen/text_size_10" />

            <ImageView
                android:id="@+id/display_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:src="@drawable/icon_trade_deep" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/bg_transaction_input"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/lin_deep_postion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="49"
                android:orientation="vertical">

                <com.black.base.widget.SpanTextView
                    android:id="@+id/deep_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="default"
                    android:textColor="@color/black_real"
                    android:textSize="@dimen/text_size_10"
                    android:textStyle="bold" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/deep_position_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="Positions"
                    android:textColor="@color/T2"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/L1" />

            <LinearLayout
                android:id="@+id/lin_deep_depth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="49"
                android:orientation="vertical">

                <com.black.base.widget.SpanTextView
                    android:id="@+id/deep_depth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="default"
                    android:textColor="@color/black_real"
                    android:textSize="@dimen/text_size_10"
                    android:textStyle="bold" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/deep_depth_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="Depth"
                    android:textColor="@color/T2"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>
