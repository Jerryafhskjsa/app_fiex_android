<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.black.frying.contract.FuturesDeepGraphFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Future info display" />

    <LinearLayout style="@style/ContractHeaderNewRight">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.black.base.widget.SpanTextView
                android:id="@+id/deep_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="@string/price"
                android:textColor="@color/T2"
                android:textSize="@dimen/text_size_12" />

            <com.black.base.widget.SpanTextView
                android:id="@+id/deep_price_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deep_price"
                android:layout_alignParentLeft="true"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingTop="4dp"
                android:text="(USDT)"
                android:textColor="@color/T2"
                android:textSize="@dimen/text_size_12" />

            <com.black.base.widget.SpanTextView
                android:id="@+id/deep_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="@string/amount"
                android:textColor="@color/T2"
                android:textSize="@dimen/text_size_12" />

            <com.black.base.widget.SpanTextView
                android:id="@+id/deep_amount_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deep_amount"
                android:layout_alignParentRight="true"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingTop="4dp"
                android:text="(BTC)"
                android:textColor="@color/T2"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_padding" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/handicap_sale_layout_10"
                style="@style/ContractDeepItemRel">

                <com.black.base.widget.SpanTextView
                    android:id="@+id/price_sale_10"
                    style="@style/ContractDeepItemTextLeft" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/count_sale_10"
                    style="@style/ContractDeepItemTextRight" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/handicap_sale_layout_09"
                style="@style/ContractDeepItemRel">

                <com.black.base.widget.SpanTextView
                    android:id="@+id/price_sale_09"
                    style="@style/ContractDeepItemTextLeft" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/count_sale_09"
                    style="@style/ContractDeepItemTextRight" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/handicap_sale_layout_08"
                style="@style/ContractDeepItemRel">

                <com.black.base.widget.SpanTextView
                    android:id="@+id/price_sale_08"
                    style="@style/ContractDeepItemTextLeft" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/count_sale_08"
                    style="@style/ContractDeepItemTextRight" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/handicap_sale_layout_07"
