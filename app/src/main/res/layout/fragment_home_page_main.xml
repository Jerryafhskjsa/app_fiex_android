<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="homePageMainModel"
            type="Object" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="@dimen/default_padding"
                android:paddingRight="15dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/btn_main_menu">

                    <LinearLayout
                        android:id="@+id/money_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/total_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="bottom"
                                android:singleLine="true"
                                android:text="@string/number_default"
                                android:textColor="@color/T1"
                                android:textSize="@dimen/text_size_20"
                                android:textStyle="bold" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/total_money_spe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="bottom"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:singleLine="true"
                                android:text="/"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_20"
                                android:textStyle="bold" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/total_money_cny"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="bottom"
                                android:singleLine="true"
                                android:text="@string/number_default"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_20"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="@dimen/default_padding"
                                android:text="@string/total_amount"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_14" />

                            <CheckBox
                                android:id="@+id/btn_main_eye"
                                android:layout_width="18dp"
                                android:layout_height="14dp"
                                android:background="@drawable/btn_main_eyes"
                                android:button="@null"
                                android:scaleType="fitXY" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/logo_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/default_padding"
                        android:paddingBottom="@dimen/default_padding">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_logo" />
                    </LinearLayout>
                </FrameLayout>

                <com.black.lib.widget.CircleImageView
                    android:id="@+id/btn_main_menu"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_home_personal" />
            </RelativeLayout>

            <com.black.lib.refresh.QRefreshLayout
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.black.base.widget.ObserveScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/B2"
                    android:descendantFocusability="blocksDescendants"
                    android:fadingEdge="none"
                    android:fillViewport="true"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="beforeDescendants"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/banner_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="@dimen/default_padding"
                            android:layout_marginRight="15dp" />

                        <LinearLayout
                            android:id="@+id/notice_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingTop="13dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="13dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_home_notice" />

                            <com.black.base.widget.VerticalTextView
                                android:id="@+id/notice_text_view"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="15dp"
                                android:layout_weight="1" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/btn_notice_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:text="@string/more"
                                android:textColor="@color/C1"
                                android:textSize="@dimen/text_size_12" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line"
                            android:background="@color/L1_ALPHA30" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="138dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="15dp"
                            android:background="@color/B2"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="114dp"
                                    android:orientation="vertical"
                                    android:visibility="invisible">

                                    <com.black.base.widget.SpanTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/C1"
                                        android:textSize="@dimen/text_size_16"
                                        android:textStyle="bold" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="7dp" />

                                    <com.black.base.widget.SpanTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:textSize="@dimen/text_size_20" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="6dp" />

                                    <com.black.base.widget.SpanTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/C5"
                                        android:textSize="@dimen/text_size_12" />

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="7dp" />

                                    <com.black.base.widget.SpanTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:textSize="@dimen/text_size_16" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/status_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <androidx.viewpager.widget.ViewPager
                                        android:id="@+id/status_view_pager"
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp" />

                                    <RadioGroup
                                        android:id="@+id/status_indicator"
                                        android:layout_width="match_parent"
                                        android:layout_height="14dp"
                                        android:layout_gravity="center_horizontal|bottom"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                    </RadioGroup>

                                </LinearLayout>
                            </FrameLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/B1"
                            android:orientation="vertical"
                            android:padding="@dimen/default_padding">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/btn_c2c"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="196"
                                    android:background="@drawable/bg_b2_corner3"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingLeft="15dp"
                                    android:paddingTop="20dp"
                                    android:paddingRight="15dp"
                                    android:paddingBottom="20dp">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <com.black.base.widget.SpanTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:maxLines="1"
                                            android:text="快捷买币"
                                            android:textColor="@color/T1"
                                            android:textSize="@dimen/text_size_18" />

                                        <com.black.base.widget.SpanTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:maxLines="1"
                                            android:text="支持 BTC,USDT"
                                            android:textColor="@color/T2"
                                            android:textSize="@dimen/text_size_13" />
                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="6dp"
                                        android:src="@drawable/icon_home_c2c" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/default_padding"
                                    android:layout_weight="149"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/btn_exchange"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/bg_b2_corner3"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <com.black.base.widget.SpanTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/double_padding"
                                            android:drawableLeft="@drawable/icon_home_recharge"
                                            android:drawablePadding="6dp"
                                            android:ellipsize="none"
                                            android:gravity="center"
                                            android:singleLine="true"
                                            android:text="@string/rechange"
                                            android:textColor="@color/T1"
                                            android:textSize="@dimen/text_size_15" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/default_padding" />

                                    <LinearLayout
                                        android:id="@+id/btn_widthdraw"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/bg_b2_corner3"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <com.black.base.widget.SpanTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/double_padding"
                                            android:drawableLeft="@drawable/icon_home_recaption"
                                            android:drawablePadding="6dp"
                                            android:ellipsize="none"
                                            android:gravity="center"
                                            android:singleLine="true"
                                            android:text="@string/extract"
                                            android:textColor="@color/T1"
                                            android:textSize="@dimen/text_size_15" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <FrameLayout
                                android:id="@+id/middle_banner_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_padding" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="11dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="11dp">

                            <com.black.base.widget.SpanCheckedTextView
                                android:id="@+id/rise_pairs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text="@string/rise"
                                android:textColor="@color/home_page_main_rise_fall"
                                android:textSize="@dimen/text_size_16"
                                android:textStyle="bold" />

                            <com.black.base.widget.SpanCheckedTextView
                                android:id="@+id/fall_pairs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="30dp"
                                android:layout_toRightOf="@+id/rise_pairs"
                                android:gravity="center"
                                android:text="@string/fall"
                                android:textColor="@color/home_page_main_rise_fall"
                                android:textSize="@dimen/text_size_16"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="5dp">

                            <com.black.base.widget.SpanTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="130"
                                android:text="@string/name"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_12" />

                            <com.black.base.widget.SpanTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="130"
                                android:text="@string/new_price"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_12" />

                            <com.black.base.widget.SpanTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="85"
                                android:gravity="right"
                                android:text="@string/rise_fall"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_12" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line"
                            android:alpha="0.3"
                            android:background="@color/L1" />

                        <com.black.base.widget.NoScrollListView
                            android:id="@+id/rise_fall_list_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fadingEdge="none"
                            android:overScrollMode="never"
                            android:scrollbars="none" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/middle_padding" />

                    </LinearLayout>
                </com.black.base.widget.ObserveScrollView>
            </com.black.lib.refresh.QRefreshLayout>
        </LinearLayout>
    </FrameLayout>
</layout>