<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="entrustRecordModel"
            type="java.util.ArrayList" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    style="@style/CollapsingToolbarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed"
                    app:titleEnabled="true">


                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/B2"
                        android:theme="@style/AppTheme"
                        app:contentInsetLeft="0dp"
                        app:contentInsetStart="0dp"
                        app:layout_collapseMode="pin"
                        app:theme="@style/AppTheme"
                        app:titleMargin="0dp"
                        app:titleTextAppearance="@style/ToolBarTitleStyle">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:id="@+id/action_bar_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:onClick="onBackClick"
                                android:scaleType="centerInside"
                                android:src="@drawable/fanhui" />

                            <com.black.base.widget.SpanTextView
                                android:id="@id/action_bar_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:maxLines="1"
                                android:text="@string/spot"
                                android:textColor="@color/T1"
                                android:textSize="@dimen/text_size_16"
                                android:textStyle="bold"/>

                            <RelativeLayout
                                android:id="@+id/filter_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical|right"
                                android:visibility="gone"
                                android:padding="@dimen/middle_padding">

                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:lineSpacingExtra="0dp"
                                    android:padding="0dp"
                                    android:text="@string/filter_title"
                                    android:textColor="@color/T1"
                                    android:textSize="@dimen/text_size_16" />

                            </RelativeLayout>
                        </FrameLayout>

                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.CollapsingToolbarLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/double_padding"
                        app:layout_collapseMode="pin">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/entrust_new"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:focusableInTouchMode="false"
                            android:textSize="@dimen/text_size_14"
                            android:text="@string/filter_entrust_new"
                            android:textColor="@color/tab_entrust_record_text_color"
                            android:textStyle="bold" />
                            <View
                                android:id="@+id/bar_one"
                                android:layout_width="15dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/text_size_5"
                                android:layout_height="3dp">

                            </View>
                            <View
                                android:id="@+id/bar_a"
                                android:layout_width="15dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/text_size_5"
                                android:layout_height="3dp"
                                android:background="@drawable/trans_bg_entrust_title_line">

                            </View>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:background="@color/B1" />
                        </LinearLayout>

                        <View
                            android:layout_width="20dp"
                            android:layout_height="1.5dp"
                            android:background="@color/B1" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/entrust_his"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:focusable="true"
                            android:focusableInTouchMode="false"
                            android:textSize="@dimen/text_size_14"
                            android:text="@string/filter_entrust_his"
                            android:textColor="@color/tab_entrust_record_text_color"
                            android:textStyle="bold" />
                        <View
                            android:id="@+id/bar_two"
                            android:layout_width="15dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/text_size_5"
                            android:layout_height="3dp">

                        </View>

                        <View
                            android:id="@+id/bar_b"
                            android:layout_width="15dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/text_size_5"
                            android:layout_height="3dp"
                            android:background="@drawable/trans_bg_entrust_title_line">

                        </View>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:background="@color/B1" />
                    </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1.5dp"
                            android:layout_marginRight="@dimen/text_size_10"
                            android:background="@color/B1" />
                    </LinearLayout>
                    </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <com.black.lib.refresh.QRefreshLayout
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.black.base.widget.ObserveScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/B2"
                    android:fadingEdge="none"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/B2"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/btn_all"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/text_size_5"
                            android:layout_marginLeft="@dimen/text_size_10"
                            android:layout_gravity="center_vertical"
                            android:layout_height="25dp">
                            <com.black.base.widget.SpanTextView
                                android:id="@+id/pair_choose_menu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_12"
                                android:textColor="#484A57"
                                android:layout_gravity="center_vertical"
                                android:text="@string/all"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_10" />
                            <ImageView
                                android:layout_width="@dimen/text_size_16"
                                android:layout_height="@dimen/text_size_16"
                                android:layout_marginLeft="@dimen/text_size_10"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/text_size_5"
                                android:background="@drawable/xiala8"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                            <com.black.base.widget.SpanCheckBox
                                android:id="@+id/contract_with_limit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/text_size_16"
                                android:button="@drawable/yin_cang"
                                android:checked="false"
                                android:clickable="true"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="隐藏已撤销"
                                android:textColor="@color/black_app"
                                android:textSize="@dimen/text_size_10" />
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/B2"
                            android:descendantFocusability="blocksDescendants">

                            <com.black.base.view.EmptyRecyclerView
                                android:id="@+id/recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fadingEdge="none"
                                android:overScrollMode="never"
                                android:paddingLeft="@dimen/double_padding"
                                android:paddingRight="@dimen/double_padding"
                                android:scrollbars="none" />

                            <include
                                android:id="@+id/empty_view"
                                layout="@layout/list_view_empty_long" />
                        </RelativeLayout>

                    </LinearLayout>
                </com.black.base.widget.ObserveScrollView>
            </com.black.lib.refresh.QRefreshLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>