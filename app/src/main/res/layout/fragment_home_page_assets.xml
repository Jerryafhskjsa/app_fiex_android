<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="assetsModel"
            type="java.util.ArrayList" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_assets_header">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/B2">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    style="@style/CollapsingToolbarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_assets_header"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed"
                    app:titleEnabled="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_collapseMode="pin">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"
                            android:paddingTop="@dimen/double_padding"
                            android:paddingRight="15dp"
                            android:paddingBottom="40dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                >

                                <com.black.base.widget.SpanTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/wallet_total_usdt"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_13" />

                                <CheckBox
                                    android:id="@+id/btn_wallet_eye"
                                    android:layout_width="18dp"
                                    android:layout_height="14dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/btn_wallet_eyes"
                                    android:button="@null"
                                    android:scaleType="fitXY" />
                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:baselineAligned="true"
                                android:gravity="center_vertical"
                                android:minHeight="40dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:baselineAligned="true"
                                    android:orientation="vertical">
                                    <com.black.base.widget.SpanAutoTextView
                                        android:id="@+id/money"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxWidth="150dp"
                                        android:maxLines="1"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_size_28" />
                                    <com.black.base.widget.SpanTextView
                                        android:id="@+id/money_cny"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="4dp"
                                        android:drawablePadding="4dp"
                                        android:maxLines="1"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_size_20"
                                        app:minTextSize="@dimen/text_size_10" />
                                </LinearLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="14dp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/lin_exchange"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal">
                                    <ImageView
                                        android:id="@+id/img_recharge"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/icon_recharge">
                                    </ImageView>
                                    <com.black.base.widget.SpanTextView
                                        android:id="@+id/btn_exchange"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="none"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:paddingTop="8dp"
                                        android:text="@string/rechange"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_size_12"
                                        android:textStyle="bold" />
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/lin_withdraw"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal">
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/icon_withdraw">
                                    </ImageView>
                                    <com.black.base.widget.SpanTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="none"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:paddingTop="8dp"
                                        android:text="@string/extract"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_size_12"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lin_transfer"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal">
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/icon_transfer">
                                    </ImageView>
                                    <com.black.base.widget.SpanTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="none"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:paddingTop="8dp"
                                        android:text="@string/transfer"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_size_12"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_gravity="right"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_asset_header"
                        >
                    </ImageView>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/bg_asset_coin_corner"
                    android:fadingEdge="none"
                    app:tabRippleColor="@color/transparent"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    />
            </com.google.android.material.appbar.AppBarLayout>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:flipInterval="30"
                android:persistentDrawingCache="animation"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </FrameLayout>
</layout>