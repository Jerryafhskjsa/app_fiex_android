<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="quotationDetailModel"
            type="java.lang.Object" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2"
        android:orientation="vertical">

        <com.black.base.widget.ObserveScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_layout"
            android:background="@color/B2"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_16"
                android:background="@color/B2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <LinearLayout
                        android:id="@+id/pair_layout_01"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/pair_layout_02"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/number_default"
                                android:textSize="@dimen/text_size_28"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/price_cny"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="0dp"
                                android:text="@string/number_default"
                                android:textColor="@color/T1"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_12" />
                            <com.black.base.widget.SpanTextView
                                android:id="@+id/percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp"
                                android:text="@string/number_default"
                                android:textColor="@color/T2"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_10" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/pair_layout_03"
                        android:layout_width="107dp"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/pair_layout_01"
                        android:layout_alignBottom="@id/pair_layout_01"
                        android:layout_marginRight="@dimen/text_size_20"
                        android:layout_toLeftOf="@id/pair_layout_02"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/liang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24h成交量(%s)"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_10" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/coin_volume_h24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:maxLines="1"
                                android:text="@string/number_default"
                                android:textColor="@color/T1"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_10" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:gravity="right"
                            android:orientation="vertical">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/jiao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24h成交额(%s)"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_10" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/volume_h24"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:maxLines="1"
                                android:text="@string/number_default"
                                android:textColor="@color/T1"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_10" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/pair_layout_02"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/pair_layout_01"
                        android:layout_alignBottom="@id/pair_layout_01"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical">

                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/high"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_10" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/high"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:maxLines="1"
                                android:text="@string/number_default"
                                android:textColor="@color/T1"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_10" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/text_size_10"
                            android:gravity="right"
                            android:orientation="vertical">

                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/low"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_10" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/low"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:maxLines="1"
                                android:text="@string/number_default"
                                android:textColor="@color/T1"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_10" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/text_size_20"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/time_step_layout"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/k_time_step_tab"
                                android:layout_width="250dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="5dp"
                                app:tabBackground="@color/transparent"
                                app:tabMaxWidth="200dp"
                                app:tabMinWidth="20dp"
                                app:tabPaddingBottom="0dp"
                                app:tabPaddingEnd="0dp"
                                app:tabPaddingStart="0dp"
                                app:tabPaddingTop="0dp"
                                app:tabRippleColor="@color/transparent"
                                app:tabTextColor="@color/tab_contranct_text"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="right|center_vertical"
                                android:layout_weight="1">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="18dp"
                                android:background="@color/L1_ALPHA60" />

                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_16"
                                android:layout_marginRight="@dimen/text_size_16"
                                android:text="深度"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/trend_default" />
                            </LinearLayout>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/B1"/>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.black.base.widget.AnalyticChart
                                android:id="@+id/analytic_chart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </FrameLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/loading_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:orientation="vertical">
                        <!--<ImageView-->
                        <!--android:layout_width="80dp"-->
                        <!--android:layout_height="80dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:src="@drawable/bg_kline_loading_ring" />-->
                        <!--<com.airbnb.lottie.LottieAnimationView-->
                        <!--android:id="@+id/loading_ring"-->
                        <!--android:layout_width="65dp"-->
                        <!--android:layout_height="40dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--app:lottie_fileName="loading.json" />-->
                    </FrameLayout>
                </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/ma"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="@dimen/text_size_13"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="MA"
                            android:textStyle="bold"
                            android:textColor="@color/tab_k_time_step_more"
                            android:textSize="@dimen/text_size_12" />

                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/boll"
                            android:layout_width="16dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="@dimen/text_size_13"
                            android:layout_weight="1"
                            android:text="BOLL"
                            android:textStyle="bold"
                            android:textColor="@color/tab_k_time_step_more"
                            android:textSize="@dimen/text_size_12" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="18dp"
                            android:background="@color/B1"/>


                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/macd"
                            android:layout_width="@dimen/text_size_16"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="@dimen/text_size_13"
                            android:layout_weight="1"
                            android:text="MACD"
                            android:textStyle="bold"
                            android:textColor="@color/tab_k_time_step_more"
                            android:textSize="@dimen/text_size_12" />

                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/kdj"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="@dimen/text_size_13"
                            android:layout_weight="1"
                            android:text="KDJ"
                            android:textStyle="bold"
                            android:textColor="@color/tab_k_time_step_more"
                            android:textSize="@dimen/text_size_12" />

                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/rsi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="@dimen/text_size_13"
                            android:layout_weight="1"
                            android:text="RSI"
                            android:textStyle="bold"
                            android:textColor="@color/tab_k_time_step_more"
                            android:textSize="@dimen/text_size_12" />

                        <com.black.base.widget.SpanCheckedTextView
                            android:id="@+id/wr"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="@dimen/text_size_13"
                            android:layout_weight="1"
                            android:text="WR"
                            android:textStyle="bold"
                            android:textColor="@color/tab_k_time_step_more"
                            android:textSize="@dimen/text_size_12" />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="18dp"
                            android:background="@color/B1"/>
                        <ImageView
                            android:id="@+id/full_screen"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="@dimen/text_size_13"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/quanping" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="16dp"
    android:background="@color/L1_ALPHA30"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F8F8FA"
                    android:orientation="vertical">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        app:tabBackground="@color/transparent"
                        app:tabMaxWidth="200dp"
                        app:tabMinWidth="20dp"
                        app:tabPaddingBottom="0dp"
                        app:tabPaddingTop="0dp"
                        app:tabRippleColor="@color/transparent"
                        app:tabTextColor="@color/c2c_tab_sale" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line"
                        android:background="@color/L1_ALPHA60" />

                    <FrameLayout
                        android:background="@color/B2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/quotation_detail_deep_layout"
                            layout="@layout/fragment_quotation_detail_depth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <include
                            android:id="@+id/quotation_detail_deal_layout"
                            layout="@layout/fragment_quotation_detail_deal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <include
                            android:id="@+id/quotation_detail_description_layout"
                            layout="@layout/fragment_quotation_detail_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>
        </com.black.base.widget.ObserveScrollView>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/shadow_k_line_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:background="@color/B2"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp">

                <com.black.base.widget.SpanCheckedTextView
                    android:id="@+id/zixuan"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/text_size_10"
                    android:drawableTop="@drawable/btn_collect"
                    android:layout_marginRight="@dimen/text_size_10"
                    android:text="@string/collect_add"
                    android:textColor="@color/T3"
                    android:textSize="@dimen/text_size_10"
                    android:textStyle="bold" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/btn_buy"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_t7_corner3"
                    android:gravity="center"
                    android:text="@string/k_buy"
                    android:textColor="@color/btn_text_color"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="@dimen/line" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/btn_sale"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_t5_corner3"
                    android:gravity="center"
                    android:text="@string/k_sale"
                    android:textColor="@color/btn_text_color"
                    android:textSize="@dimen/text_size_15"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>