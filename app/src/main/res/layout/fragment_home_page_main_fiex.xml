<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="homePageMainModel"
            type="Object" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/default_padding"
                android:paddingBottom="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btn_search_menu"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginRight="20dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/btn_search_menu" />

                        <ImageView
                            android:id="@+id/btn_scan_menu"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="20dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/btn_scan_menu" />

                        <ImageView
                            android:id="@+id/btn_more_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_main_more" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/btn_userinfo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_home_personal" />
            </RelativeLayout>

            <com.black.lib.refresh.QRefreshLayout
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.black.base.widget.ObserveScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/B2"
                    android:descendantFocusability="blocksDescendants"
                    android:fadingEdge="none"
                    android:fillViewport="true"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="beforeDescendants"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            >
                            <ImageView
                                android:id="@+id/rel_name_type"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/icon_nft">
                            </ImageView>
                            <RelativeLayout
                                android:layout_toRightOf="@+id/rel_name_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                >
                                <TextView
                                    android:id="@+id/type_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="#000000"
                                    android:text="NFTs">

                                </TextView>
                                <TextView
                                    android:id="@+id/type_des"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/type_name"
                                    android:textSize="13sp"
                                    android:paddingTop="15dp"
                                    android:textColor="#99000000"
                                    android:text="Discover, buy, sell and even create NFTs in just a few clicks">
                                </TextView>
                                <ImageView
                                    android:id="@+id/type_go"
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:layout_alignParentBottom="true"
                                    android:src="@drawable/icon_type_right_arrow">
                                </ImageView>
                            </RelativeLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="25dp"
                            android:paddingBottom="15dp"
                            android:background="@drawable/bg_b2_corner3"
                            android:orientation="horizontal"
                            >
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <CheckedTextView
                                    android:id="@+id/notify"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:drawableTop="@drawable/icon_translate_recharge"
                                    android:maxLines="1"
                                    android:drawablePadding="10dp"
                                    android:text="@string/notice_1"
                                    android:textColor="@color/T1"
                                    android:layout_centerInParent="true"
                                    android:textSize="@dimen/text_size_12" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <CheckedTextView
                                    android:id="@+id/custom_service"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:drawableTop="@drawable/icon_translate_recharge"
                                    android:maxLines="1"
                                    android:drawablePadding="10dp"
                                    android:layout_centerInParent="true"
                                    android:text="@string/customer_service"
                                    android:textColor="@color/T1"
                                    android:textSize="@dimen/text_size_12" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <CheckedTextView
                                    android:id="@+id/do_scan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:drawableTop="@drawable/icon_translate_recharge"
                                    android:maxLines="1"
                                    android:drawablePadding="10dp"
                                    android:layout_centerInParent="true"
                                    android:text="@string/scan"
                                    android:textColor="@color/T1"
                                    android:textSize="@dimen/text_size_12" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <CheckedTextView
                                    android:id="@+id/flash_exchange"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:drawableTop="@drawable/icon_translate_recharge"
                                    android:maxLines="1"
                                    android:drawablePadding="10dp"
                                    android:text="@string/flash_exchange"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/T1"
                                    android:textSize="@dimen/text_size_12" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <CheckedTextView
                                    android:id="@+id/informations"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:drawableTop="@drawable/icon_translate_recharge"
                                    android:maxLines="1"
                                    android:drawablePadding="10dp"
                                    android:layout_centerInParent="true"
                                    android:text="@string/information"
                                    android:textColor="@color/T1"
                                    android:textSize="@dimen/text_size_12" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/B2"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:id="@+id/status_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <androidx.viewpager.widget.ViewPager
                                        android:id="@+id/status_view_pager"
                                        android:layout_width="match_parent"
                                        android:layout_height="200dp" />
                                    <RadioGroup
                                        android:id="@+id/status_indicator"
                                        android:layout_width="match_parent"
                                        android:layout_height="14dp"
                                        android:layout_gravity="center_horizontal|bottom"
                                        android:gravity="center"
                                        android:orientation="horizontal">
                                    </RadioGroup>
                                </LinearLayout>
                            </FrameLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/notice_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingTop="13dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="13dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="14dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/icon_home_notice" />

                            <com.black.base.widget.VerticalTextView
                                android:id="@+id/notice_text_view"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="15dp"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/btn_notice_more"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:paddingLeft="8dp"
                                android:src="@drawable/icon_home_notice_more"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line"
                            android:background="@color/L1_ALPHA30" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="11dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="11dp">

                            <com.black.base.widget.SpanCheckedTextView
                                android:id="@+id/rise_pairs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text="@string/rise"
                                android:textColor="@color/home_page_main_rise_fall"
                                android:textSize="@dimen/text_size_16"
                                android:textStyle="bold" />

                            <com.black.base.widget.SpanCheckedTextView
                                android:id="@+id/fall_pairs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="30dp"
                                android:layout_toRightOf="@+id/rise_pairs"
                                android:gravity="center"
                                android:text="@string/fall"
                                android:textColor="@color/home_page_main_rise_fall"
                                android:textSize="@dimen/text_size_16"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="5dp">

                            <com.black.base.widget.SpanTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="130"
                                android:text="@string/name"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_12" />

                            <com.black.base.widget.SpanTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="130"
                                android:text="@string/new_price"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_12" />

                            <com.black.base.widget.SpanTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="85"
                                android:gravity="right"
                                android:text="@string/rise_fall"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_12" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/line"
                            android:alpha="0.3"
                            android:background="@color/L1" />

                        <com.black.base.widget.NoScrollListView
                            android:id="@+id/rise_fall_list_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fadingEdge="none"
                            android:overScrollMode="never"
                            android:scrollbars="none" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/middle_padding" />

                    </LinearLayout>
                </com.black.base.widget.ObserveScrollView>
            </com.black.lib.refresh.QRefreshLayout>
        </LinearLayout>
    </FrameLayout>
</layout>