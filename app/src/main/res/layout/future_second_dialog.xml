<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="walletNormalModel"
            type="Object" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            style="@style/ButtonTanChuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/udesk_20"
            android:orientation="vertical">

            <com.black.base.widget.SpanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="一键平仓" />

            <com.black.base.widget.SpanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_16"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="是否确认将所有永续合约仓位市价全平？" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.black.base.widget.SpanTextView
                    android:id="@+id/btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/text_size_10"
                    android:background="@drawable/btn_gray"
                    android:layout_marginTop="@dimen/text_size_16"
                    android:textColor="@color/black"
                    android:text="@string/cancel1"
                    />
            <com.black.base.widget.SpanTextView
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn_blue"
                android:layout_marginTop="@dimen/text_size_16"
                android:textColor="@color/white"
                android:text="@string/confirm"
                />
        </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</layout>