<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="cloudPowerProjectModel"
            type="Object" />
    </data>

    <FrameLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/C1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/C1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/B2" />
        </LinearLayout>

        <com.black.lib.refresh.QRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/B1"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/C1"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingTop="@dimen/default_padding"
                        android:paddingRight="15dp">

                        <com.black.base.widget.SpanTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="云算力"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_28"
                            android:textStyle="bold" />

                        <com.black.base.widget.SpanTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="轻松投资比特币"
                            android:textColor="@color/white_ALPHA60"
                            android:textSize="@dimen/text_size_15" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/double_padding"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@drawable/icon_cloud_power_01"
                                android:drawablePadding="4dp"
                                android:gravity="center"
                                android:text="方便快捷"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_12" />

                            <com.black.base.widget.SpanTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@drawable/icon_cloud_power_02"
                                android:drawablePadding="4dp"
                                android:gravity="center"
                                android:text="小额投资"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_12" />

                            <com.black.base.widget.SpanTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@drawable/icon_cloud_power_03"
                                android:drawablePadding="4dp"
                                android:gravity="center"
                                android:text="安全省心"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_12" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="102dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="-82dp"
                        android:layout_marginRight="15dp"
                        android:descendantFocusability="blocksDescendants">

                        <com.black.base.view.EmptyRecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fadingEdge="none"
                            android:overScrollMode="never"
                            android:scrollbars="none" />

                        <include
                            android:id="@+id/empty_view"
                            layout="@layout/list_view_empty_long" />
                    </RelativeLayout>
                </LinearLayout>
            </com.black.base.widget.ObserveScrollView>
        </com.black.lib.refresh.QRefreshLayout>
    </FrameLayout>
</layout>