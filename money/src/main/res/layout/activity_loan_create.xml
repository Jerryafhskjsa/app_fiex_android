<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="loanCreateModel"
            type="Object" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_create"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">

                <include layout="@layout/tool_bar_left_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_padding"
                    android:background="@color/B1" />
            </com.google.android.material.appbar.AppBarLayout>

            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="none"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/double_padding"
                    android:paddingTop="@dimen/default_padding"
                    android:paddingRight="@dimen/double_padding">

                    <com.black.base.widget.SpanTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="抵押币种"
                        android:textColor="@color/T1"
                        android:textSize="@dimen/text_size_13" />

                    <com.black.lib.view.InputLinearLayout
                        android:id="@+id/mortgage_coin_type_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_box"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/mortgage_coin_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/icon_left"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:text="@string/number_default"
                            android:textColor="@color/T1"
                            android:textSize="@dimen/text_size_18"
                            android:textStyle="bold" />
                    </com.black.lib.view.InputLinearLayout>

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/use_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/number_default"
                        android:textColor="@color/T2"
                        android:textSize="@dimen/text_size_13" />

                    <com.black.base.widget.SpanTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/double_padding"
                        android:maxLines="1"
                        android:text="借入币种"
                        android:textColor="@color/T1"
                        android:textSize="@dimen/text_size_13" />

                    <com.black.lib.view.InputLinearLayout
                        android:id="@+id/loan_coin_type_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_box"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/loan_coin_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/icon_left"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:text="@string/number_default"
                            android:textColor="@color/T1"
                            android:textSize="@dimen/text_size_18"
                            android:textStyle="bold" />
                    </com.black.lib.view.InputLinearLayout>

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/max_loan_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/number_default"
                        android:textColor="@color/T2"
                        android:textSize="@dimen/text_size_13" />

                    <com.black.base.widget.SpanTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/double_padding"
                        android:maxLines="1"
                        android:text="抵押数量"
                        android:textColor="@color/T1"
                        android:textSize="@dimen/text_size_14" />

                    <com.black.base.widget.SpanMaterialEditText
                        android:id="@+id/mortgage_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:maxLines="1" />

                    <com.black.base.widget.SpanTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/double_padding"
                        android:maxLines="1"
                        android:text="借入数量"
                        android:textColor="@color/T1"
                        android:textSize="@dimen/text_size_14" />

                    <com.black.base.widget.SpanMaterialEditText
                        android:id="@+id/loan_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:maxLines="1" />

                    <com.black.base.widget.SpanTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/double_padding"
                        android:maxLines="1"
                        android:text="借贷周期"
                        android:textColor="@color/T1"
                        android:textSize="@dimen/text_size_14" />

                    <com.black.lib.view.InputLinearLayout
                        android:id="@+id/rate_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_box"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp">

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/days"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:text="@string/number_default"
                            android:textColor="@color/T1"
                            android:textSize="@dimen/text_size_16" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/icon_left"
                            android:drawablePadding="6dp"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="@string/number_default"
                            android:textColor="@color/T3"
                            android:textSize="@dimen/text_size_16" />
                    </com.black.lib.view.InputLinearLayout>

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/loan_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/double_padding"
                        android:gravity="center_vertical"
                        android:text="@string/loan_warning"
                        android:textColor="@color/T5"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </com.black.base.widget.ObserveScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <com.black.base.widget.SpanTextView
            android:id="@+id/btn_create"
            style="@style/ButtonBlue"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/double_padding"
            android:layout_weight="1"
            android:text="@string/confirm" />

    </RelativeLayout>
</layout>