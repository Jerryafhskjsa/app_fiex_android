<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="userSettingModel"
            type="Object" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">
                <include layout="@layout/tool_bar_left_back" />
            </com.google.android.material.appbar.AppBarLayout>

            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/B1"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/first_server"
                        style="@style/MenuListItem">

                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/first_server"
                            android:textColor="@color/T1"
                            android:textSize="@dimen/text_size_16" />

                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawableRight="@drawable/icon_left"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:textColor="@color/T2"
                            android:textSize="@dimen/text_size_14" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/first_a"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="250dp"
                            android:drawableRight="@drawable/bg_circle_green"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:textColor="@color/T2"
                            android:textSize="@dimen/text_size_14"
                            tools:ignore="NotSibling" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/first_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="280dp"
                            android:text="115 ms"
                            android:textColor="@color/list_bottom_text_bg"
                            android:textSize="@dimen/text_size_16" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/style_setting"
                        style="@style/MenuListItem">
                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/second_server"
                            android:textColor="@color/T1"
                            android:textSize="@dimen/text_size_16" />
                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawableRight="@drawable/icon_left"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:textColor="@color/T2"
                            android:textSize="@dimen/text_size_14" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/second_a"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="250dp"
                            android:drawableRight="@drawable/bg_circle_green"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:textColor="@color/T2"
                            android:textSize="@dimen/text_size_14"
                            tools:ignore="NotSibling" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/second_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="280dp"
                            android:text="115 ms"
                            android:textColor="@color/list_bottom_text_bg"
                            android:textSize="@dimen/text_size_16" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/about_us"
                        style="@style/MenuListItem">

                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/third_server"
                            android:textColor="@color/T1"
                            android:textSize="@dimen/text_size_16" />
                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawableRight="@drawable/icon_left"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:textColor="@color/T2"
                            android:textSize="@dimen/text_size_14" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/third_a"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="250dp"
                            android:drawableRight="@drawable/bg_circle_green"
                            android:drawablePadding="6dp"
                            android:gravity="center"
                            android:textColor="@color/T2"
                            android:textSize="@dimen/text_size_14"
                            tools:ignore="NotSibling" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/third_b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="280dp"
                            android:text="115 ms"
                            android:textColor="@color/list_bottom_text_bg"
                            android:textSize="@dimen/text_size_16" />
                    </RelativeLayout>


                    <com.black.base.widget.SpanTextView
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/btn_t8"
                        android:checked="false"
                        android:includeFontPadding="false"
                        android:layout_margin="@dimen/default_padding"
                        android:text="@string/switching"
                        android:gravity="center"
                        android:textColor="@color/T8"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.black.base.widget.ObserveScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </FrameLayout>
</layout>
