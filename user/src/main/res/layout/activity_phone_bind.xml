<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="phoneBindModel"
            type="Object" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">

                <include layout="@layout/tool_bar_left_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_padding" />

            </com.google.android.material.appbar.AppBarLayout>

            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/double_padding"
                        android:paddingRight="@dimen/double_padding">

                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/input_new_phone_number"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_12">
                        </com.black.base.widget.SpanTextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <RelativeLayout
                            style="@style/ButtonGray"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                           >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/country"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/text_size_10"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <com.black.base.widget.SpanMaterialEditText
                                    android:id="@id/country_code"
                                    style="@style/EditTextStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+86"
                                    android:textColor="#5F616D"
                                    android:textSize="@dimen/text_size_14" />

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="16dp"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/xiala">

                                </ImageView>
                            </LinearLayout>
                                <com.black.base.widget.SpanMaterialEditText
                                    android:id="@+id/phone_account"
                                    style="@style/EditTextStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/default_padding"
                                    android:layout_marginRight="@dimen/text_size_10"
                                    android:hint="@string/edt_account_hint"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:padding="@dimen/middle_padding"
                                    android:textSize="@dimen/text_size_14"
                                    app:useDelete="true" />
                            </LinearLayout>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />


                        <com.black.base.widget.SpanTextView
                            android:id="@+id/phone_old"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_12"
                            android:text="@string/input_phone_now_code">
                        </com.black.base.widget.SpanTextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <com.black.lib.view.InputLinearLayout
                            android:id="@+id/phone_layout"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/ButtonGray"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanMaterialEditText
                                android:id="@+id/phone_code"
                                style="@style/EditTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:hint="@string/hint_phone_code"
                                android:inputType="text"
                                android:maxLines="1"
                                android:padding="0dp" />


                            <com.black.base.widget.SpanTextView
                                android:id="@+id/get_phone_code"
                                style="@style/EditTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:text="@string/send_code"
                                android:textColor="@color/T13"
                                android:textSize="@dimen/text_size_16" />
                        </com.black.lib.view.InputLinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/phone_old2"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_12"
                            android:text="@string/input_new_phone_code_verify">

                        </com.black.base.widget.SpanTextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <com.black.lib.view.InputLinearLayout
                            android:id="@+id/phone_layout_verify"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/ButtonGray"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanMaterialEditText
                                android:id="@+id/phone_code_vieify"
                                style="@style/EditTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:hint="@string/hint_phone_code"
                                android:inputType="text"
                                android:maxLines="1"
                                android:padding="0dp" />


                            <com.black.base.widget.SpanTextView
                                android:id="@+id/get_phone_code_verify"
                                style="@style/EditTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:text="@string/send_code"
                                android:textColor="@color/T13"
                                android:textSize="@dimen/text_size_16" />
                        </com.black.lib.view.InputLinearLayout>




                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />
                        <com.black.base.widget.SpanTextView
                            android:id="@+id/mail_account"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_12"
                            android:text="@string/input_mail_code">

                        </com.black.base.widget.SpanTextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <com.black.lib.view.InputLinearLayout
                            android:id="@+id/mail_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/ButtonGray"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanMaterialEditText
                                android:id="@+id/mail_code"
                                style="@style/EditTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:hint="@string/mail_code"
                                android:inputType="text"
                                android:maxLines="1"
                                android:padding="0dp" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/get_mail_code"
                                style="@style/EditTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:text="@string/send_code"
                                android:textColor="@color/T13"
                                android:textSize="@dimen/text_size_16" />
                        </com.black.lib.view.InputLinearLayout>

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/google_window"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_12"
                            android:text="@string/google_code_input_hint">

                        </com.black.base.widget.SpanTextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <com.black.lib.view.InputLinearLayout
                            android:id="@+id/google_code_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/ButtonGray"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.black.base.widget.SpanMaterialEditText
                                android:id="@+id/google_code"
                                style="@style/EditTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:hint="@string/google_code_1"
                                android:inputType="text"
                                android:maxLines="1"
                                android:padding="0dp" />


                            <com.black.base.widget.SpanTextView
                                android:id="@+id/google_code_copy"
                                style="@style/EditTextStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:text="@string/paste"
                                android:textColor="@color/T13"
                                android:textSize="@dimen/text_size_16" />
                        </com.black.lib.view.InputLinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginTop="15dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/icon_tips_change_psw">

                            </ImageView>

                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:text="@string/change_password_warning"
                                android:textColor="@color/T15"
                                android:textSize="@dimen/text_size_12" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </com.black.base.widget.ObserveScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="@dimen/double_padding">

            <com.black.base.widget.SpanTextView
                android:id="@+id/btn_submit"
                style="@style/ButtonBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="@dimen/middle_padding"
                android:text="@string/submit" />
        </LinearLayout>
    </RelativeLayout>
</layout>