<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="languageSettingModel"
            type="Object" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">
                <include layout="@layout/tool_bar_left_back" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_padding"
                    android:background="@color/B1" />
            </com.google.android.material.appbar.AppBarLayout>
            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/B1"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/B1"
                    android:layout_marginLeft="@dimen/default_padding"
                    android:layout_marginRight="@dimen/default_padding"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="@dimen/default_padding"
                            android:paddingBottom="@dimen/default_padding"
                            android:src="@drawable/jinggao">
                        </ImageView>
                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_10"
                            android:textColor="@color/T13"
                            android:text="@string/change_password_warning">
                        </com.black.base.widget.SpanTextView>
                    </LinearLayout>
                    <com.black.base.widget.SpanTextView
                        android:id="@+id/login_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/default_padding"
                        android:paddingBottom="@dimen/default_padding"
                        android:text="@string/phone_number"
                        android:textColor="@color/T14"
                        android:textSize="@dimen/text_size_14" />
                    <RelativeLayout
                        android:id="@+id/rel_phone"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_login_editbox">

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/country_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/default_padding"
                            android:text="+86"
                            android:textColor="@color/T14"
                            android:textSize="@dimen/text_size_14" />
                        <ImageView
                            android:id="@+id/img_country_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/country_code"
                            android:paddingRight="10dp"
                            android:src="@drawable/xiala" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/tv_account"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img_country_code"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingLeft="10dp"
                            android:paddingRight="0dp"
                            android:text="231231"
                            android:textSize="@dimen/text_size_12" />
                    </RelativeLayout>
                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/verify_code"
                        android:paddingTop="@dimen/default_padding"
                        android:paddingBottom="@dimen/default_padding"
                        android:textColor="@color/T14"
                        android:textSize="@dimen/text_size_14"
                        />
                    <com.black.lib.view.InputLinearLayout
                        android:id="@+id/phone_layout"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/bg_login_editbox"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp">

                        <com.black.base.widget.SpanMaterialEditText
                            android:id="@+id/phone_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:paddingLeft="5dp"
                            android:textSize="@dimen/text_size_12"
                            android:hint="@string/input_verify_code"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="0dp" />
                        <com.black.base.widget.SpanTextView
                            android:id="@+id/get_phone_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/send_code"
                            android:textColor="@color/T13"
                            android:paddingRight="5dp"
                            android:textSize="@dimen/text_size_12" />
                    </com.black.lib.view.InputLinearLayout>
                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/default_padding"
                        android:paddingBottom="@dimen/default_padding"
                        android:text="@string/new_psw"
                        android:textColor="@color/T14"
                        android:textSize="@dimen/text_size_14" />
                    <com.black.base.widget.SpanMaterialEditText
                        android:id="@+id/new_psw"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="@string/pls_input_new_password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_login_editbox"
                        android:textSize="@dimen/text_size_12"
                        app:use_delete="true" />
                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/default_padding"
                        android:paddingBottom="@dimen/default_padding"
                        android:text="@string/confirm_new_password"
                        android:textColor="@color/T14"
                        android:textSize="@dimen/text_size_14" />
                    <com.black.base.widget.SpanMaterialEditText
                        android:id="@+id/new_psw_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:hint="@string/input_password_again"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_login_editbox"
                        android:textSize="@dimen/text_size_12"
                        app:use_delete="true" />
                </LinearLayout>
            </com.black.base.widget.ObserveScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginLeft="@dimen/text_size_20"
            android:layout_marginRight="@dimen/text_size_20"
            android:layout_marginBottom="@dimen/text_size_10"
            android:orientation="vertical">
            <com.black.base.widget.SpanTextView
                android:id="@+id/btn_confirm"
                style="@style/ButtonBlue"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="32dp"
                android:text="@string/confirm_1" />
        </LinearLayout>
    </RelativeLayout>
</layout>