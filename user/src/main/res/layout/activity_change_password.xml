<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="changePasswordModel"
            type="Object" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/B2">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">

                <include layout="@layout/tool_bar_left_back" />

            </com.google.android.material.appbar.AppBarLayout>

            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/double_padding"
                    android:paddingRight="@dimen/double_padding">
                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/old_psw">
                    </com.black.base.widget.SpanTextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_default">

                        <com.black.base.widget.SpanMaterialEditText
                            android:id="@+id/current_password"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:hint="@string/current_login_password"
                            android:inputType="textPassword" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/new_psw">
                    </com.black.base.widget.SpanTextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_default">
                        <com.black.base.widget.SpanMaterialEditText
                            android:id="@+id/new_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:hint="@string/new_password"
                            android:inputType="textPassword"
                            style="@style/EditTextStyle"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <com.black.base.widget.SpanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/new_psw">
                    </com.black.base.widget.SpanTextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_default">

                        <com.black.base.widget.SpanMaterialEditText
                            android:id="@+id/new_password_again"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:hint="@string/new_password_again"
                            android:inputType="textPassword" />
                    </RelativeLayout>


                    <com.black.lib.view.InputLinearLayout
                        android:id="@+id/phone_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_box"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:visibility="gone">

                        <com.black.base.widget.SpanMaterialEditText
                            android:id="@+id/phone_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/hint_phone_code"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="0dp" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/get_phone_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/send_code"
                            android:textColor="@color/C1"
                            android:textSize="@dimen/text_size_16" />
                    </com.black.lib.view.InputLinearLayout>

                    <com.black.lib.view.InputLinearLayout
                        android:id="@+id/mail_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_box"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:visibility="gone">

                        <com.black.base.widget.SpanMaterialEditText
                            android:id="@+id/mail_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/mail_code"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="0dp" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/get_mail_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/send_code"
                            android:textColor="@color/C1"
                            android:textSize="@dimen/text_size_16" />
                    </com.black.lib.view.InputLinearLayout>

                    <com.black.base.widget.SpanMaterialEditText
                        android:id="@+id/google_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/google_code"
                        android:inputType="text"
                        android:maxLines="1"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="15dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/icon_tips_change_psw">
                        </ImageView>
                        <com.black.base.widget.SpanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/change_password_warning"
                            android:textColor="@color/T15"
                            android:layout_marginLeft="6dp"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>


                    <com.black.base.widget.SpanTextView
                        android:id="@+id/btn_confirm"
                        style="@style/ButtonBlue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:padding="@dimen/middle_padding"
                        android:text="@string/modify" />
                </LinearLayout>
            </com.black.base.widget.ObserveScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </FrameLayout>
</layout>