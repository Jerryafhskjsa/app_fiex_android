<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="languageSettingModel"
            type="Object" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">
                <include layout="@layout/tool_bar_left_back" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_padding"
                    android:background="@color/B1" />
            </com.google.android.material.appbar.AppBarLayout>

            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/B1"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/B1"
                    android:orientation="vertical">

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/exchange_cny"
                        style="@style/MenuListItem"
                        android:text="@string/cny"
                        android:textColor="@color/T1"
                        android:textSize="@dimen/text_size_16" />

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/exchange_usd"
                        style="@style/MenuListItem"
                        android:text="@string/exchange_rates_usd"
                        android:textColor="@color/T1"
                        android:textSize="@dimen/text_size_16" />

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/exchange_jpy"
                        style="@style/MenuListItem"
                        android:text="@string/exchange_rates_jpy"
                        android:textColor="@color/T1"
                        android:textSize="@dimen/text_size_16" />
                    <com.black.base.widget.SpanTextView
                        android:id="@+id/exchange_krw"
                        style="@style/MenuListItem"
                        android:text="@string/exchange_rates_krw"
                        android:textColor="@color/T1"
                        android:textSize="@dimen/text_size_16" />
                    <com.black.base.widget.SpanTextView
                        android:id="@+id/exchange_vnd"
                        style="@style/MenuListItem"
                        android:text="@string/exchange_rates_vnd"
                        android:textColor="@color/T1"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>
            </com.black.base.widget.ObserveScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </FrameLayout>
</layout>