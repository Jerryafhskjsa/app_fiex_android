<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="xianLu"
            type="Object" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">

                <include layout="@layout/tool_bar_left_back" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_padding"
                    android:background="@color/B1" />
            </com.google.android.material.appbar.AppBarLayout>

            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/B1"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/B2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:layout_marginTop="@dimen/text_size_20"
                            android:orientation="horizontal">
                    <com.black.base.widget.SpanTextView
                        android:id="@+id/line1"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:text="Line 1"
                        android:textColor="@color/T1"
                        android:textSize="@dimen/text_size_18" />
                            <ImageView
                                android:id="@+id/bar_a"
                                android:layout_width="@dimen/text_size_16"
                                android:layout_height="@dimen/text_size_16"
                                android:layout_weight="1"
                               android:layout_gravity="bottom"
                                android:src="@drawable/queren"/>
                        </LinearLayout>
                        <com.black.base.widget.SpanTextView
                            android:id="@+id/shudu"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:text="Line 1"
                            android:textColor="@color/T1"
                            android:textSize="@dimen/text_size_10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:layout_marginTop="@dimen/text_size_20"
                            android:orientation="horizontal">
                            <com.black.base.widget.SpanTextView
                                android:id="@+id/line2"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_weight="2"
                                android:text="Line 1"
                                android:textColor="@color/T1"
                                android:textSize="@dimen/text_size_18" />
                            <ImageView
                                android:id="@+id/bar_b"
                                android:layout_width="@dimen/text_size_16"
                                android:layout_height="@dimen/text_size_16"
                                android:layout_weight="1"
                                android:visibility="gone"
                                android:layout_gravity="bottom"
                                android:src="@drawable/queren"/>
                        </LinearLayout>
                        <com.black.base.widget.SpanTextView
                            android:id="@+id/shudu2"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="@dimen/text_size_20"
                            android:text="Line 2"
                            android:textColor="@color/T1"
                            android:textSize="@dimen/text_size_10" />
                    </LinearLayout>
                </LinearLayout>
            </com.black.base.widget.ObserveScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </FrameLayout>
</layout>