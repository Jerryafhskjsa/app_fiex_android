<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewShareForumModel"
            type="Object" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/B2"
        android:orientation="vertical">

        <com.black.base.widget.SpanTextView
            android:id="@+id/coin_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="16dp"
            android:textColor="@color/T1"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/qrcode"
            android:layout_width="168dp"
            android:layout_height="168dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.black.base.widget.SpanTextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/middle_padding"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/T2"
                android:textSize="@dimen/text_size_12"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_forum_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="9dp"
                android:paddingTop="@dimen/middle_padding"
                android:paddingRight="9dp"
                android:paddingBottom="@dimen/middle_padding"
                android:src="@drawable/icon_copy" />
        </LinearLayout>
    </LinearLayout>
</layout>