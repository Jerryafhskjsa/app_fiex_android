<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="aboutUsModel"
            type="Object" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/current_version">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="12dp"
                android:theme="@style/AppTheme"
                app:elevation="12dp">
                <include layout="@layout/tool_bar_left_back" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_padding"
                    android:background="@color/B1" />
            </com.google.android.material.appbar.AppBarLayout>
            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/B2"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="60dp">
                        <ImageView
                            android:id="@+id/img_about"
                            android:layout_width="80dp"
                            android:layout_height="120dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/icon_about_us"></ImageView>
                        <com.black.base.widget.SpanTextView
                            android:id="@+id/about_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_about"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="30dp"
                            android:text="FIEX产品介绍，建立加密世界 从FIEX开始。简单实现买卖加密货币，立即注册并开始使用吧。FIEX产品介绍，建立加密世界 从FIEX开始。简单实现买卖加密货币，立即注册并开始使用吧。"
                            android:textColor="@color/T14"
                            android:textSize="@dimen/text_size_14" />
                        <com.black.base.widget.SpanTextView
                            android:id="@+id/check_update"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about_des"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:text="@string/check_update"
                            android:textColor="@color/T13"
                            android:textSize="@dimen/text_size_14" />
                    </RelativeLayout>
            </com.black.base.widget.ObserveScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <com.black.base.widget.SpanTextView
            android:id="@+id/current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:text="v1.0.0"
            android:layout_marginBottom="30dp"
            android:textColor="@color/T2"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>
</layout>