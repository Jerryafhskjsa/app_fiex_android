<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="gestruePasswordSettingModel"
            type="Object" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/middle_padding">

        <com.black.base.widget.SpanTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:text="@string/gesture_password"
            android:textColor="@color/T1"
            android:textSize="@dimen/text_size_28"
            android:textStyle="bold" />

        <com.black.base.widget.SpanTextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="50dp"
            android:gravity="center_horizontal"
            android:text="@string/gestrue_hint_01"
            android:textColor="@color/T2"
            android:textSize="@dimen/text_size_15" />

        <com.black.lib.gesture.GesturePasswordView
            android:id="@+id/gesture_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>