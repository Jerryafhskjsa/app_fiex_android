<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="sendRedPacketModel"
            type="Object" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/choose_coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_b2_corner3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">

                <com.black.base.widget.SpanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择币种"
                    android:textColor="@color/T1"
                    android:textSize="@dimen/text_size_16" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/coin_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/icon_left"
                    android:drawablePadding="6dp"
                    android:gravity="right|center_vertical"
                    android:maxLines="1"
                    android:text="USDT"
                    android:textColor="@color/T1"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <com.black.base.widget.SpanTextView
                android:id="@+id/hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/double_padding"
                android:background="@color/B2"
                android:padding="@dimen/default_padding"
                android:textColor="@color/T5"
                android:textSize="@dimen/text_size_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/double_padding"
                android:background="@drawable/bg_b2_corner3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">

                <com.black.base.widget.SpanTextView
                    android:id="@+id/amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_red_packet_random"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="总金额"
                    android:textColor="@color/T1"
                    android:textSize="@dimen/text_size_16" />

                <com.black.base.widget.SpanMaterialEditText
                    android:id="@+id/amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:textColor="@color/T1"
                    android:textSize="@dimen/text_size_16" />

                <com.black.base.widget.SpanTextView
                    android:id="@+id/amount_coin_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:maxLines="1"
                    android:text="USDT"
                    android:textColor="@color/T1"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <com.black.base.widget.SpanTextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="当前为拼手气红包，改为普通红包"
                android:textColor="@color/T2"
                android:textSize="@dimen/text_size_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/double_padding"
                android:background="@drawable/bg_b2_corner3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">

                <com.black.base.widget.SpanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红包个数"
                    android:textColor="@color/T1"
                    android:textSize="@dimen/text_size_16" />

                <com.black.base.widget.SpanMaterialEditText
                    android:id="@+id/count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="填写个数"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:textColor="@color/T1"
                    android:textSize="@dimen/text_size_16" />

                <com.black.base.widget.SpanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:maxLines="1"
                    android:text="个"
                    android:textColor="@color/T1"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_b2_corner3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">

                <com.black.base.widget.SpanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="祝福语"
                    android:textColor="@color/T1"
                    android:textSize="@dimen/text_size_16" />

                <com.black.base.widget.SpanMaterialEditText
                    android:id="@+id/text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="恭喜发财，万事如意！"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:textColor="@color/T1"
                    android:textSize="@dimen/text_size_16" />

            </LinearLayout>

            <com.black.base.widget.SpanTextView
                android:id="@+id/total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="@string/number_default"
                android:textColor="@color/T1"
                android:textSize="@dimen/text_size_28"
                android:textStyle="bold" />

            <com.black.base.widget.SpanTextView
                android:id="@+id/btn_send"
                style="@style/ButtonBlue"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="40dp"
                android:text="塞钱进钱包" />
        </LinearLayout>
    </FrameLayout>
</layout>