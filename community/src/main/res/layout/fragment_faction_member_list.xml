<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="fragmentFactionMemberListModel"
            type="Object" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.black.lib.refresh.QRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_layout">

            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottom_layout"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/user_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#1918c1c2"
                        android:gravity="center"
                        android:padding="7dp"
                        android:textColor="#18c1c2" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:descendantFocusability="blocksDescendants">

                        <com.black.base.view.EmptyRecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fadingEdge="none"
                            android:overScrollMode="never"
                            android:scrollbars="none" />

                        <include
                            android:id="@+id/empty_view"
                            layout="@layout/list_view_empty_faction" />
                    </RelativeLayout>

                </LinearLayout>
            </com.black.base.widget.ObserveScrollView>
        </com.black.lib.refresh.QRefreshLayout>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:divider="@drawable/bg_divider_20"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/double_padding"
            android:showDividers="middle"
            android:visibility="gone">

            <com.black.base.widget.SpanTextView
                android:id="@+id/btn_become"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_blue"
                android:gravity="center"
                android:padding="13dp"
                android:text="竞选掌门"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_16" />

            <com.black.base.widget.SpanTextView
                android:id="@+id/btn_keep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_blue"
                android:gravity="center"
                android:padding="13dp"
                android:text="连任掌门"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_16" />

            <com.black.base.widget.SpanTextView
                android:id="@+id/btn_join"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_blue"
                android:gravity="center"
                android:padding="13dp"
                android:text="加入帮派"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </RelativeLayout>
</layout>