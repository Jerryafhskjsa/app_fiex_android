<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="chatRoomInfoModel"
            type="Object" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/B2"
        android:orientation="vertical">

        <com.black.lib.refresh.QRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.black.base.widget.ObserveScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/B1"
                android:fadingEdge="none"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/group_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/B2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/double_padding"
                        android:paddingTop="@dimen/default_padding"
                        android:paddingRight="@dimen/double_padding"
                        android:paddingBottom="@dimen/default_padding">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/group_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:textColor="@color/T1"
                                android:textSize="@dimen/text_size_16" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/group_introduction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="@string/not_filled_in"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_13" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/icon_left" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/group_notice_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/B2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/double_padding"
                        android:paddingTop="@dimen/default_padding"
                        android:paddingRight="@dimen/double_padding"
                        android:paddingBottom="@dimen/default_padding">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.black.base.widget.SpanTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="群公告"
                                android:textColor="@color/T1"
                                android:textSize="@dimen/text_size_16" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/group_notice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="@string/not_filled_in"
                                android:textColor="@color/T2"
                                android:textSize="@dimen/text_size_13" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/icon_left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/B2"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/double_padding"
                        android:paddingTop="@dimen/default_padding"
                        android:paddingRight="@dimen/double_padding"
                        android:paddingBottom="@dimen/default_padding">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.black.base.widget.SpanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:maxLines="1"
                                android:text="群主"
                                android:textColor="@color/T1"
                                android:textSize="@dimen/text_size_16" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/default_padding"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.black.lib.widget.CircleImageView
                                android:id="@+id/owner_avatar"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentRight="true"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/icon_home_personal" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/owner_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="FBSexer"
                                android:textColor="@color/T1"
                                android:textSize="@dimen/text_size_16" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/B2"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/double_padding"
                        android:paddingTop="@dimen/default_padding"
                        android:paddingRight="@dimen/double_padding"
                        android:paddingBottom="@dimen/default_padding">

                        <RelativeLayout
                            android:id="@+id/group_admin_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/group_admin_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:maxLines="1"
                                android:text="管理员"
                                android:textColor="@color/T1"
                                android:textSize="@dimen/text_size_16" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/group_admin_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="6dp"
                                android:layout_toLeftOf="@+id/group_admin_icon"
                                android:layout_toRightOf="@+id/group_admin_title"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="共0人"
                                android:textColor="@color/T3"
                                android:textSize="@dimen/text_size_13" />

                            <ImageView
                                android:id="@+id/group_admin_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="6dp"
                                android:src="@drawable/icon_left" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/default_padding"
                            android:background="@color/B2"
                            android:descendantFocusability="blocksDescendants">

                            <com.black.base.view.EmptyRecyclerView
                                android:id="@+id/admin_recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fadingEdge="none"
                                android:overScrollMode="never"
                                android:scrollbars="none" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/B2"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/double_padding"
                        android:paddingTop="@dimen/default_padding"
                        android:paddingRight="@dimen/double_padding"
                        android:paddingBottom="@dimen/default_padding">

                        <RelativeLayout
                            android:id="@+id/group_member_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/group_member_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:maxLines="1"
                                android:text="群成员"
                                android:textColor="@color/T1"
                                android:textSize="@dimen/text_size_16" />

                            <com.black.base.widget.SpanTextView
                                android:id="@+id/group_member_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="6dp"
                                android:layout_toLeftOf="@+id/group_member_icon"
                                android:layout_toRightOf="@+id/group_member_title"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="共0人"
                                android:textColor="@color/T3"
                                android:textSize="@dimen/text_size_13" />

                            <ImageView
                                android:id="@+id/group_member_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="6dp"
                                android:src="@drawable/icon_left" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/default_padding"
                            android:background="@color/B2"
                            android:descendantFocusability="blocksDescendants">

                            <com.black.base.view.EmptyRecyclerView
                                android:id="@+id/member_recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fadingEdge="none"
                                android:overScrollMode="never"
                                android:scrollbars="none" />
                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/group_nick_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/B2"
                        android:paddingLeft="@dimen/double_padding"
                        android:paddingTop="@dimen/default_padding"
                        android:paddingRight="@dimen/double_padding"
                        android:paddingBottom="@dimen/default_padding">

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/group_nick_name_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:maxLines="1"
                            android:text="我的群名片"
                            android:textColor="@color/T1"
                            android:textSize="@dimen/text_size_16" />

                        <com.black.base.widget.SpanTextView
                            android:id="@+id/group_nick_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:layout_toLeftOf="@+id/group_nick_name_icon"
                            android:layout_toRightOf="@+id/group_nick_name_title"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="@string/not_filled_in"
                            android:textColor="@color/T3"
                            android:textSize="@dimen/text_size_13" />

                        <ImageView
                            android:id="@+id/group_nick_name_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/icon_left" />
                    </RelativeLayout>

                    <com.black.base.widget.SpanTextView
                        android:id="@+id/btn_exit"
                        style="@style/ButtonRed"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/double_padding"
                        android:layout_marginTop="@dimen/double_padding"
                        android:layout_marginRight="@dimen/double_padding"
                        android:layout_marginBottom="@dimen/default_padding"
                        android:text="退出群聊" />
                </LinearLayout>
            </com.black.base.widget.ObserveScrollView>

        </com.black.lib.refresh.QRefreshLayout>
    </LinearLayout>
</layout>