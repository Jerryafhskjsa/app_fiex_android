<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/chat_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/T3"
            android:textSize="@dimen/text_size_13" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/left_user_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_time_layout"
        android:layout_alignParentLeft="true">

        <com.black.im.widget.UserIconView
            android:id="@+id/left_user_icon_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            app:image_radius="10dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/right_user_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_time_layout"
        android:layout_alignParentRight="true">

        <com.black.im.widget.UserIconView
            android:id="@+id/right_user_icon_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            app:image_radius="10dp" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/user_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_time_layout"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/right_user_icon_layout"
        android:layout_toRightOf="@+id/left_user_icon_layout"
        android:orientation="horizontal">

        <com.black.base.widget.SpanTextView
            android:id="@+id/left_first_letter"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bg_circle_green"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/T1"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/msg_content_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_layout"
        android:layout_toLeftOf="@+id/right_user_icon_layout"
        android:layout_toRightOf="@+id/left_user_icon_layout"
        android:orientation="horizontal">

        <com.black.im.widget.UnreadCountTextView
            android:id="@+id/audio_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/message_sending_pb"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/is_read_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dp"
            android:textColor="@color/text_gray1"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/message_status_iv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/message_send_fail"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/msg_content_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>