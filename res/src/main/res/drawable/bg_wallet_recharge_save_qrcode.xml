<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@color/C1_ALPHA10" />
            <stroke android:width="0.5dp" android:color="@color/C1_ALPHA80" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@color/C1_ALPHA10" />
            <stroke android:width="0.5dp" android:color="@color/C1" />
        </shape>
    </item>
    <item android:drawable="@drawable/icon_c5" android:state_enabled="false" />
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@color/C1_ALPHA10" />
            <stroke android:width="0.5dp" android:color="@color/C1_ALPHA50" />
        </shape>
    </item>
</selector>