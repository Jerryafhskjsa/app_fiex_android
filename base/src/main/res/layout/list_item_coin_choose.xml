<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >
    <ImageView
        android:id="@+id/img_coin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_launcher_fiex">
    </ImageView>

    <com.black.base.widget.SpanTextView
        android:id="@+id/coin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_coin"
        android:maxLines="1"
        android:text="1INCH"
        android:textColor="@color/T14"
        android:textSize="@dimen/text_size_14" />

    <com.black.base.widget.SpanTextView
        android:id="@+id/coin_name_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coin_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/img_coin"
        android:maxLines="1"
        android:text="1INCH"
        android:textColor="@color/T11_ALPHA60"
        android:textSize="@dimen/text_size_12" />
    <com.black.base.widget.SpanTextView
        android:id="@+id/coin_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_alignParentRight="true"
        android:textColor="@color/T14"
        android:layout_marginLeft="15dp"
        android:text="0.00"
        android:textSize="@dimen/text_size_14" />
</RelativeLayout>
