<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="230dp"
    android:background="@drawable/xianhuo"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/double_padding">

    <ImageView
        android:id="@+id/title"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:gravity="center"
        android:src="@drawable/shoouji" />

    <com.black.base.widget.SpanTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_20"
        android:layout_marginTop="@dimen/text_size_10"
        android:gravity="center"
        android:text="@string/bangding"
        android:textColor="@color/T1"
        android:textSize="@dimen/text_size_14" />
    <com.black.base.widget.SpanTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/bangding_success"
        android:textColor="@color/T3"
        android:textSize="@dimen/text_size_14" />
    <com.black.base.widget.SpanTextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/text_size_10"
        android:layout_marginBottom="@dimen/text_size_10"
        android:gravity="center"
        android:text="@string/confirm"
        android:background="@drawable/anniu"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />


</LinearLayout>