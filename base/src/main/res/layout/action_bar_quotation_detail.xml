<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/B2"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <ImageButton
                android:id="@+id/action_bar_back"
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:contentDescription="@null"
                android:onClick="onBackClick"
                android:scaleType="centerInside"
                android:src="@drawable/btn_back" />

            <com.black.base.widget.SpanTextView
                android:id="@+id/action_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/action_bar_back"
                android:clickable="true"
                android:maxLines="1"
                android:layout_marginLeft="@dimen/double_padding"
                android:textColor="@color/T1"
                android:textSize="@dimen/text_size_17"
                android:textStyle="bold" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:gravity="center_vertical">

            <CheckedTextView
                android:id="@+id/btn_chat_room"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/icon_coin_chat"
                android:gravity="center"
                android:padding="@dimen/default_padding"
                android:paddingLeft="15dip"
                android:paddingRight="@dimen/default_padding"
                android:textSize="0sp" />

            <ImageButton
                android:id="@+id/btn_collect"
                android:layout_height="22dp"
                android:layout_width="22dp"
                android:background="@null"
                android:contentDescription="@null"
                android:onClick="onBackClick"
                android:scaleType="centerInside"
                android:src="@drawable/btn_collect_default" />

            <ImageButton
                android:id="@+id/full_screen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:contentDescription="@null"
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="15dip"
                android:src="@drawable/icon_large" />

        </LinearLayout>
    </FrameLayout>

</RelativeLayout>