<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="120dp">

    <LinearLayout
        android:id="@+id/btn_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_list_empty" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/double_padding" />

        <com.black.base.widget.SpanTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_my_collect"
            android:textColor="@color/T2"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="124dp"
            android:layout_height="44dp"
            android:background="@color/B1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.black.base.widget.SpanTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_add_collect"
                android:drawablePadding="8dp"
                android:text="@string/add_collect"
                android:textColor="@color/C1"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
